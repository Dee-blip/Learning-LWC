<aura:component implements="lightning:homeTemplate" description="3 column template, not optimised for Mobile Devices yet">
    <!-- Setup/Attributes -->
    <aura:attribute name="top" type="Aura.Component[]" />
    <aura:attribute name="left" type="Aura.Component[]" />
    <aura:attribute name="middle" type="Aura.Component[]" />
    <aura:attribute name="right" type="Aura.Component[]" />
    <aura:attribute name="bottomLeft" type="Aura.Component[]" />
    <aura:attribute name="bottomRight" type="Aura.Component[]" />
    <aura:attribute name="lsize" type="String" default="4"/> <!-- Default width of left column -->
    <aura:attribute name="rsize" type="String" default="4"/> <!-- Default width of right column -->
    <aura:attribute name="show" type="string" default="true" />
    <aura:attribute name="isexpanded" type="boolean" default="true" />
    
    <div>
        <lightning:card class="slds-m-around--xx-small slds-grow slds-card">
           <div class="{! 'slds-section ' + (v.isexpanded ? ' slds-is-open' : '')}"  >
                <h3 class="slds-section__title slds-theme_shade">
                    <button aria-controls="divContent" label="Report Chart" aria-expanded="{!v.isexpanded}" onclick="{!c.changeState}" class="slds-button slds-section__title-action">
                        <aura:if isTrue="{!v.isexpanded}">
                            <span >[ - ]</span >
                            <aura:set attribute="else">
                            <span >[ + ]</span >
                            </aura:set>
                        </aura:if>
                        <span class="slds-text-heading_medium" title="Section Title" > &nbsp;&nbsp;&nbsp;&nbsp;Your Cases Snapshot (LoE, Volume, Age)</span>
                    </button>
                </h3>
                <div class="slds-section__content" aria-hidden="{!!v.isexpanded}" id="divContent">
                    <lightning:layout horizontalAlign="spread">      
                        <!-- First Column -->
                        <lightning:layoutItem size="{!v.lsize}" class="slds-m-horizontal--xx-small">
                            {!v.left}
                        </lightning:layoutItem>          
                        <!-- Second Column -->
                        <lightning:layoutItem flexibility="grow" class="slds-m-horizontal--xx-small">
                            {!v.middle}
                        </lightning:layoutItem>   
                        <!-- third Column -->          
                        <lightning:layoutItem size="{!v.rsize}" class="slds-m-horizontal--xx-small">
                            {!v.right}
                        </lightning:layoutItem>
                    </lightning:layout>
                </div> 
            </div> 
        </lightning:card>
        <div>
            <lightning:layout >                
                <lightning:layoutItem flexibility="grow" class="slds-m-around--xx-small">
                    {!v.top}
                </lightning:layoutItem>
            </lightning:layout>
        </div>
        <div>
            <lightning:layout > 
        <lightning:layoutItem size="6" flexibility="auto" class="slds-m-horizontal--xx-small">
                    {!v.bottomLeft}
                </lightning:layoutItem>                                  
                <lightning:layoutItem flexibility="grow" class="slds-m-horizontal--xx-small">
                    {!v.bottomRight}
                </lightning:layoutItem>
            </lightning:layout>
        </div>
    </div>
    
</aura:component>