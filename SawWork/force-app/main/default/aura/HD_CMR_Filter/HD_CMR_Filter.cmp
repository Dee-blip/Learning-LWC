<aura:component controller="HD_CMR_ChangeCalendar">

    <!-- aura attribute -->
    <aura:attribute name="records" type="List" />
    <aura:attribute name="filters" type="Map" default="{'name':'name'}"/>
    <aura:attribute name="megaOptions" type="List" />
    <aura:attribute name="current_filter" type="Map" default ="{}"/>
    <aura:attribute name="mySelectedItems" type="List"/>
    <aura:attribute name="options1" type="List"/>
    <aura:attribute name="options2" type="List"/>
    <aura:attribute name="options3" type="List"/>
    <aura:attribute name="options4" type="List" />
    <aura:attribute name="options5" type="List" />
    <aura:attribute name="value"  type="List" />
    <aura:attribute name="value1" type="List" />
    <aura:attribute name="value2" type="List" />
    <aura:attribute name="value3" type="List" />
    <aura:attribute name="show" type="Boolean" default="false"/>
    <aura:attribute name="applyListViewFilter" type="Boolean" default="false" />
    <aura:attribute name="currentFilterId" type="String"  />
     <aura:attribute name="listViewOptions" type="List" default="[
    {'label': 'Opened', 'value': 'Opened'},
    {'label': 'In Progress', 'value': 'inProgress'},
    {'label': 'Finished', 'value': 'finished'},
    ]"/>
      
    <aura:attribute name="applyListView" type="List" default="option1"/>
    <!-- aura attribute -->


    <!-- aura events -->
    <aura:registerEvent name="fiteredChangeList" type="c.HD_CMR_ChangeList"/>
    <aura:registerEvent name="filterConfigChanged" type = "c.HD_CMR_ListViewFilter"/>
    <!-- aura events -->


    <!-- aura handlers -->
    <aura:handler name="init" action = "{!c.initRec}" value="{!this}" />
    <aura:handler name="change" value="{!v.records}" action="{!c.reInit}"/>
