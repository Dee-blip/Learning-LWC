<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <!--
        Using lightning:recordViewForm tag record Id and objectApiName is required to fetch record.
        For custom objects, do check you have __c in the api name
     -->
     <!-- 19.4 Sujay : FFPSA-795 renaming RecordId to accRecordId to avoid intermittent Error -->
    <aura:attribute name="accRecordId" type="Id" />
    <aura:attribute name="accountName" type="String" default=""/>
    <aura:attribute name="recordError" type="String"
                    description="An error message bound to force:recordData"/>
    <aura:attribute name="accountDetails" type="Object"/>
    <aura:attribute name="simpleRecord" type="Object"
                    description="A simplified view record object to be displayed"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!-- Using lightning:card tag with a title -->

    <aura:if isTrue="{! not(empty( v.accRecordId )) }">
        <lightning:card iconName="standard:account" title="{!v.accountName}">
            <lightning:recordViewForm recordId="{!v.accRecordId}" objectApiName="Account">
                <p class="slds-p-horizontal_small">
                <div class="slds-grid">
                <!--
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:outputField fieldName="OwnerId"/>
                        <lightning:outputField fieldName="Geography_Formula__c" />
                        <lightning:outputField fieldName="Area__c" />
                    </div>
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:outputField fieldName="Division_Formula__c" />
                        <lightning:outputField fieldName="Region__c" />
                        <lightning:outputField fieldName="Division__c" />
                    </div>
                -->
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:outputField fieldName="OwnerId"/>
                        <lightning:outputField fieldName="TERR_HIER_2__c" />
                        <lightning:outputField fieldName="TERR_HIER_4__c" />
                    </div>
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:outputField fieldName="TERR_HIER_1__c" />
                        <lightning:outputField fieldName="TERR_HIER_3__c" />
                        <lightning:outputField fieldName="TERR_HIER_5__c" />
                    </div>
                </div>
                </p>
            </lightning:recordViewForm>
        </lightning:card>
    </aura:if>

    <aura:if isTrue="{!not(empty(v.recordError))}">
        <div class="recordError">
            {!v.recordError}</div>
    </aura:if>
</aura:component>