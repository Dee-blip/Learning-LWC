<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="liveChatOptions" type="List" default="[
                                                                {'label': 'Business Support', 'value': 'AMG'},
                                                                {'label': 'Technical Support', 'value': 'Technical'}
                                                                ]"/>  
    <aura:attribute name="liveChatType" type="String" default="AMG"/>
    <aura:attribute name="businessSupportLabel" type="String"/>
    <aura:attribute name="technicalSupportLabel" type="String"/>
    <aura:attribute name="businessSupportLabelTag" type="String"/>
    <aura:attribute name="technicalSupportLabelTag" type="String"/>
    <aura:attribute name="showBusinessBtn" type="Boolean" default="false"/>
    <aura:attribute name="showTechnicalBtn" type="Boolean" default="false"/>
    <aura:attribute name="disableLivechat" type="Boolean"/>
    <aura:attribute name="liveChatLabel" type="String"/>

    <div style="margin-left: 50px;margin-right:87px;border: 1px solid #b9babb;">
        <div style="margin-left:26px;margin-top:16px;">
            <b style="color:orange;font-size: 14px;">{!v.liveChatLabel}</b>  
        </div>
        <lightning:radioGroup style="padding-top: 4px;font-size: 17px;margin-left:26px;" name="liveChatOptions" options="{!v.liveChatOptions}" value="{!v.liveChatType}" onchange="{!c.handleChange}" type="radio" disabled="{!v.disableLivechat}"/>
        <div style="padding-top: 14px;">
            <center>
                <aura:if isTrue="{!v.showBusinessBtn}">
                    <iframe src="{!'/customers/SC_Community_Akachat_Business'}" width="89%" height="60px;" frameBorder="0" />
                </aura:if>
                <aura:if isTrue="{!v.showTechnicalBtn}">
                    <iframe src="{!'/customers/SC_Community_Akachat_Technical'}" width="89%" height="60px;" frameBorder="0"/>
                </aura:if>
            </center>
        </div>
    </div>
</aura:component>