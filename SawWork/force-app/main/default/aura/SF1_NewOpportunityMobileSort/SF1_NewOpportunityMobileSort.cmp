<aura:component controller="SF1_NewOpportunityMobileController">

  <!-- map of fieldName and API name to show field names and return API names -->
  <aura:attribute name="mapOfFieldNamesForSorting" type="List"/>
  <!-- used to enable/ disable Sort Button -->
  <aura:attribute name="disabled" type="Boolean" default="false"/>

  <!-- fire event that return SortBy and Sort Order values -->
  <aura:registerEvent name="Sorter" type="c:SF1_NewOpportunityMobileSortEvent"/>

  <!-- sort button -->
  <!-- <div style="slds-col_bump-left slds-grid slds-grid_vertical-align-center">
    <button type="button" disabled="{! v.disabled }" class="slds-button slds-button_neutral" onclick="{!c.openSortModal}">Sort</button>
  </div> -->

  <span style="display:block; position:fixed; bottom:13%; right:2%; z-index:99; border:none; outline:none;  color:white; cursor:pointer; padding:15px; border-radius:25px;" onclick="{!c.openSortModal}">
    <lightning:icon iconName="action:sort" size="small" alternativeText="Opportunity"/>
  </span>

  <!--  display pop up modal onclick of sort button -->
  <div >
    <div role="dialog" tabindex="-1" aura:id="SortModalbox" aria-labelledby="header43" class="slds-modal  slds-modal_large ">
      <div class="slds-modal__container">
        <div class="slds-modal__header">
          <button class="slds-button slds-button--icon-inverse slds-modal__close" onclick="{!c.closeSortModal}">
            <span>
              <lightning:icon iconName="utility:close" size="medium" alternativeText="close"/>
              <span class="slds-assistive-text">Close</span>
            </span>
          </button>
          <h6 id="modal-heading-01" class="slds-text-heading--small">Sort By</h6>
        </div>
        <div class="slds-modal__content slds-p-around--medium">
          <div>
            <ul class="slds-has-dividers_around-space ">
              <aura:iteration items="{! v.mapOfFieldNamesForSorting }" var="eachName">

                <li class="slds-item slds-color__background_gray-2">
                  <div class="slds-grid">
                    <div class="slds-col slds-size_3-of-6">
                      {!eachName.label}
                    </div>
                    <div class="slds-col slds-size_3-of-6">
                      <lightning:buttonGroup >
                        <div data-type="{! eachName.value }" data-order="ASC" onclick="{! c.sortManager }">
                          <lightning:button label="Asc"/>
                        </div>
                        <div data-type="{! eachName.value }" data-order="DESC" onclick="{! c.sortManager }">
                          <lightning:button label="Des"/>
                        </div>
                      </lightning:buttonGroup>
                    </div>
                  </div>
                </li>

              </aura:iteration>

            </ul>
          </div>
        </div>
        <div class="slds-modal__footer">
          <div style="align:">
            <button class="slds-button slds-button--neutral" onclick="{!c.closeSortModal}">Close</button>
          </div>
        </div>
      </div>
    </div>
    <div class="slds-backdrop" aura:id="SortModalClose"></div>
  </div>

</aura:component>