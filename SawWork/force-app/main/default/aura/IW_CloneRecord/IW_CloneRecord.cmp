<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" controller="IW_CloneInvestmentRecord">
		<aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
	    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/>
		<aura:handler name="init" value="{! this }" action="{! c.init }"/>    	
    	       	
    	<aura:attribute name="recordId" type="Id"/>
	    <aura:attribute name="Spinner" type="boolean" default="false"/>

    	<aura:if isTrue="{!v.Spinner}">
			<lightning:spinner variant="brand" size="large" />
        </aura:if>    
    
</aura:component>