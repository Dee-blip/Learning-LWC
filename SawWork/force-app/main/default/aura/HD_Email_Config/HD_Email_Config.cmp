<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" controller="HD_IncidentDetailController">
    <aura:registerEvent name="HDLogger" type="c:HDLogger"/>
	<ltng:require scripts="{!$Resource.HD_Error_Logger}" /> 
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="warnings" type="String[]"/>
    <aura:attribute name="incident" type="BMCServiceDesk__Incident__c" />
 
    <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
    <aura:dependency resource="markup://force:editRecord" type="EVENT" />
    <div>
        <div aura:id="Accspinner" class="slds-spinner_container slds-hide">
		<div role="status" class="slds-spinner slds-spinner--medium slds-spinner--brand">
			<span class="slds-assistive-text">Processing</span>
			<div class="slds-spinner__dot-a"></div>
			<div class="slds-spinner__dot-b"></div>
		</div>
	</div>       
 
   <div class="slds-form-element">
         <br/>
         Email Notification Configurations
        <br/>
       <div class="slds-form-element__control" aura:id='ar_mailconf' id='mailconf'>
          <div style="padding-left:15px;">
                 <div class="opttitle">
                  <input type="checkbox" name="clnt_noti"  id="clnt_notify" aura:id ="ar_clnt_notify" onclick="{!c.changeEmailConf}" checked="{!v.incident.Exclude_Client_Notifications__c}" data-key="clientNotification"/>
                  &nbsp;Exclude Client Notifications</div>

           </div>
           <aura:if isTrue="{!v.incident.HD_System_Admin_Incident__c}">
               <br/>
              <span> DL-EIS Configurations </span>
               <div style="padding-left:15px;"> 
                   <div class="opttitle">
                       <input type="checkbox" name="create_noti" id="create_notify" aura:id ="ar_create_notify" onclick="{!c.changeEmailConf}" checked="{!v.incident.Notify_dl_sysadmin_on_creation__c}" data-key="onCreation" disabled="true"/>
                       Notify DL-EIS during Creation
                   </div>
         

                    <div class="opttitle">
                   <input type="checkbox" name="status_noti"  id="status_notify" aura:id ="ar_status_notify" onclick="{!c.changeEmailConf}" checked="{!v.incident.Notify_dl_sysadmin_on_status_change__c}" data-key="onStatusChange" value="on"/>
             
                    &nbsp;Notify DL-EIS on Status Change</div>
                       

                   <div class="opttitle">
                  <input type="checkbox" name="notes_noti"  id="notes_notify" aura:id ="ar_notes_notify"  onclick="{!c.changeEmailConf}" checked="{!v.incident.HD_Notify_DL_EIS_on_Notes_Update__c}" data-key="onNoteUpdate"/>
                 
                   &nbsp;Notify DL-EIS on Notes Update</div>            
                   <br/>
           
               </div>
           </aura:if>
       </div>   
        
   </div>
   </div>
</aura:component>