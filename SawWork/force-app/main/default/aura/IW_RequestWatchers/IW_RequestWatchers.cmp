<aura:component controller="IW_getRequestWatchers" implements="force:hasRecordId,flexipage:availableForRecordHome" access="global" >
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="selectedLookUpRecords" type="sObject[]" default="[]"/>
    <aura:attribute name="requestorId" type="String"/>
    <aura:attribute name="submitterId" type="String"/>
    <aura:attribute name="wachersId" type="String"/>
    <aura:attribute name="saveAccess" type="Boolean"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <lightning:card iconName="standard:user" title="Watchers">
        <c:IW_reUsableMultiSelectLookup objectAPIName="User"
                                        IconName="standard:user"
                                        lstSelectedRecords="{!v.selectedLookUpRecords}"
                                        label=""/>
        <aura:renderIf isTrue="{!v.saveAccess}">
        <div style="text-align: center;padding-top: 0.5rem;">                
            <lightning:button variant="brand" type="submit" label="Save" onclick="{!c.addNewWatchers}" class="btnCls"/>
        </div>
        </aura:renderIf>
    </lightning:card>
</aura:component>