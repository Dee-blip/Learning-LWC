<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	<aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="record" type="SObject"/> 
    <aura:attribute name="sObjectName" type="String"/> 
    
    <div class="sectionEight parentContainer">
        <div class="slds-media__body" onclick="{!c.gotoRecord}">
            <h3 class="slds-truncate" title="Object"></h3>
            	<div class="slds-text-body--small">
                    <dl >
                        <dd >
                            <force:recordView recordId="{!v.recordId}" type="MINI" />
                        </dd>
                    </dl>
                </div>
        </div>
    </div>
    
</aura:component>