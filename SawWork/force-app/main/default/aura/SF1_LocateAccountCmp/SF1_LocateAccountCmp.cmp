<aura:component controller="SF1_LocateAccountController" implements="force:lightningQuickAction,force:hasRecordId">
     <aura:attribute name="recordId" type="Id" />
     <aura:attribute name="opp" type="Opportunity"/>
     <aura:attribute name="acc" type="Account[]"/>
     <aura:attribute name="flag1" type="Boolean" default="false"/>
     <aura:attribute name="flag2" type="Boolean"/>
     <aura:attribute name="flag3" type="Boolean"/>
     <aura:attribute name="btnDisable" type="Boolean" default="false"/>
     <aura:attribute name="offset" type="String" default="0"/>
     <aura:attribute name="keyChange" type="Boolean" default="false"/>
    <aura:attribute name="CheckAccess" type="Boolean" />


    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>   
    <aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/>
    <div>
    <center><lightning:spinner variant="brand" size="large" aura:id="ltngSpinner" class="slds-hide"/></center>
    </div>
<ui:scrollerWrapper class="sWrapTest">
  <div style = "background-color:white;">
            <br></br>
    <div class="slds-m-around--small"><c:SF1_BackToOpportunity recordId="{!v.recordId}"/></div><br/>
    <div class="slds-m-around--small"><ui:inputText aura:id="AccountName" label="Account Name" value="{!v.opp.Customer_Company_Name__c}" change="{!c.onChange}"/></div>
    <div class="slds-m-around--small"><ui:inputText aura:id="AccountDomain" label="Domain" value="{!v.opp.End_Customer_Website__c}" change="{!c.onChange}"/></div>
    <div class="slds-m-around--small"><ui:inputText aura:id="AccountCountry" label="Country" value="{!v.opp.End_Customer_Country__c}" change="{!c.onChange}"/></div>
    <div class="slds-m-around--small"><ui:inputText aura:id="AccountState" label="State" value="{!v.opp.End_Customer_State__c}" change="{!c.onChange}"/></div><br/>
    
<div class="slds-m-around--small">    
       <ui:button aura:id="button" label="Search" press="{!c.doSearch}"/>	
       <ui:button aura:id="button" label="Create New Account" press="{!c.Navigate}"/>
    </div>
    <br/>
    <aura:if isTrue="{!v.flag3}">
  <ui:message title="Error" severity="error" closable="false">
      Please enter some search criteria.
  </ui:message>         
  </aura:if>
    
  <aura:if isTrue="{!v.flag2}">
  <ui:message title="No Matches Found" severity="info" closable="false">       
  </ui:message>         
  </aura:if>
    
    <aura:if isTrue="{!v.flag1}">
     
    <aura:iteration var="acct" items="{!v.acc}" >
    <span>
    <c:SF1_LocateAccountList acc="{!acct}" opp_id="{!v.recordId}"/>
    </span>
    </aura:iteration>
    <div class="slds-align--absolute-center slds-p-vertical--large slds-m-around--large loadMore">
    <lightning:button class="button" variant="brand" label="Show More"  type="submit" onclick="{!c.doSearch}" disabled="{!v.btnDisable}"/>
    </div>
    </aura:if>
 </div>
    </ui:scrollerWrapper>
    <br/>
     
 </aura:component>