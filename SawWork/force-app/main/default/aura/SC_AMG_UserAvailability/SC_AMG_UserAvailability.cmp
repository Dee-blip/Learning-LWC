<aura:component controller="SC_AMG_Home_Lightning" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" extends="c:AuraUtils" >
    
    <!--<aura:attribute name="columns" type="List"/>-->
    <lightning:workspaceAPI aura:id="workspace"/>
    
    <aura:attribute name="searchTerm" type="String" default=""/>
    
    <aura:handler name="oSelectedRecordEvent" event="c:SC_CustomLookupEvent" action="{!c.handleComponentEvent}"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:handler name="destroy" value="{!this}" action="{!c.handleDestroy}"/>
    
    <aura:attribute name="columns" type="List" default="[]"/>
    <aura:attribute name="data" type="List" access= "global" default="[]"/>
    <aura:attribute name="userCount" type="Integer" access= "global" default="0"/>
    
    <aura:attribute name="loggedUser" type="sObject" access="global" />
    <aura:attribute name="loggedUserId" type="String" access="global" />
    <aura:attribute name="keyField" type="String" default="id"/>
    <!-- the container element determine the height of the datatable -->
    <aura:attribute name="recId" type="Id" />
    <aura:attribute name="showPop" type="boolean" default="false" />
    <aura:attribute name="loadSpinner" type="Boolean" default="true" />
    
    <aura:attribute name="teamAvailabilityModal" type="Boolean" default="false" />
    <aura:attribute name="managerColumns" type="List" default="[]"/>
    <aura:attribute name="managerData" type="List" access= "global" default="[]"/>
    <aura:attribute name="selectedUserRecord" type="sObject" default="{}" />
    <aura:attribute name="selectedUserRecordId" type="String" default=""/>
 
    <aura:attribute name="sortedBy" type="String" default="Name"/>
    <aura:attribute name="sortedDirection" type="String" default="asc"/>
    <aura:attribute name="setIntervalId" type="Integer"/>
    
    <article class="slds-card">
        <div class="slds-card__header slds-grid slds-gutters">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                
                <div>
                    <aura:if isTrue="{!v.loadSpinner}">
                        <div style="opacity: 0.7" aura:id="spinnerId" class="slds-spinner_container">
                            <lightning:spinner alternativeText="Loading" variant="brand" size="medium" />
                        </div>
                    </aura:if>
                </div>
                
                <div class="slds-col slds-size_2-of-4">
                    
                    <ul class="slds-list_horizontal slds-media_center">
                        <li>
                            <lightning:icon iconName="standard:groups" class="slds-icon" />
                        </li>
                        <li class="">
                            <span style="font-size:17px;padding-left: 10px;">User Availability</span>
                        </li>
                    </ul>
                    
                </div>
                
                
                <div class="slds-col rightAlign">
                    <!--<lightning:input
                                 label="Search"
                                 variant="label-hidden"
                                 value="{!v.searchTerm}"
                                 placeholder="Search AMG Manager"
                                 onchange="{!c.onSearchTermChange}"/>-->
                    
                    <lightning:button variant="brand" 
                                      label="Other Team's Availability"
                                      title="Team Availability"
                                      onclick="{!c.openTeamAvailabilityModal}"/>
                    
                </div>
                
                <div class="slds-col rightAlign">
                    <button class="slds-button" label="Refresh"
                            onclick="{!c.refreshTable}">
                        <lightning:icon iconName="action:refresh" alternativeText="Refresh" size="x-small"/>
                    </button>
                </div>
                
            </header>
        </div>

        <div class="slds-card__body slds-card__body_inner" style="height:240px;">    
            <aura:if isTrue="{!v.userCount > 0}">
                <div style="height:240px;">
                    <lightning:datatable 
                                         data="{!v.data}" 
                                         columns="{!v.columns}" 
                                         keyField="userId"
                                         aura:Id="datatable"
                                         onsort = "{!c.updateColumnSorting}"
                                         sortedBy="{!v.sortedBy}" 
                                         onrowaction="{! c.handleRowAction }"
                                         sortedDirection="{!v.sortedDirection}"
                                         hideCheckboxColumn = "true"
                                         />
                </div>
                <aura:set attribute ="else">
                    <div class="slds-text-heading_medium slds-align_absolute-center" style="padding: 30px;height:240px;">
                        Loading Users...
                    </div>
                </aura:set>
            </aura:if>
        </div>
        <footer class="slds-card__footer"></footer>
    </article>
    
    <aura:if isTrue="{!v.teamAvailabilityModal}">
        <div class="slds-m-around_xx-large" style="height:300px">
            <!-- Modal/Popup Box starts here-->
            <section role="dialog" tabindex="-1" aria-labelledby = "modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open slds-modal_small">
                <div class="slds-modal__container">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{!c.closeTeamAvailabilityModal}"
                                              alternativeText="Close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Team's Availability</h2>
                        <p class="slds-m-top_x-small">Search for an AMG Agent/Manager to see their Team's Availability</p>
                        <br /><br />
                        <div>
                            <c:SC_AMG_CustomLookup
                                               objectAPIName="User"
                                               IconName=""
                                               label="Search for any AMG Agent/Manager"
                                               selectedRecord="{!v.selectedUserRecord}"
                                               selectedRecordId="{!v.selectedUserRecordId}"
                                               />
                        </div>
                    </header>
                    
                    <div class="slds-modal__content slds-p-around_medium" id="teamModal" style="height:300px">
                        
                        <div>
                            <lightning:datatable 
                                                 data="{!v.managerData}" 
                                                 columns="{!v.columns}" 
                                                 keyField="userId"
                                                 aura:Id="mgrDatatable"
                                                 hideCheckboxColumn = "true"
                                                 />
                        </div>
                        
                    </div>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
    </aura:if>
</aura:component>