<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" controller = "SC_AssignERCController" access="global" >
    
    <aura:attribute name="Spinner" type="boolean" default="false"/>
    <aura:attribute name="recordId" type="String" access="Global"/>
    <aura:attribute name="recordError" type="String"/>
    <aura:attribute name="initERC" type="String" access="Global"/>
    <aura:attribute name="message" type="String" access="Global"/>

    
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    
    <aura:html tag="style">
        .cuf-content 
        {
            padding: 0rem !important;
        }
        .slds-p-around--medium 
        {
            padding: 0rem !important;
        }       
        .slds-modal__content
        {
            overflow-y:hidden !important;
            height:unset !important;
            max-height:unset !important;
        }
        
        .slds-modal__close
        {
            display : none !important;
        }
    </aura:html>    
  
    <div>
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" aura:id="Modalbox" class="slds-modal">
            <div class="slds-modal__container" style="height: 100% !important; width: 100% !important">
                <header class="slds-modal__header">
                    <h2 id="modal-heading-01" class="slds-text-heading_small slds-hyphenate">Confirm</h2>
                </header>
                <div class="slds-modal__content slds-p-around_large" style="width: 100%!important " id="modal-content-id-1">
                    <p class="slds-text-body_regular"><aura:unescapedHtml value="{! v.message}" /></p>
                </div>
                <footer class="slds-modal__footer">
                    <button class="slds-button slds-button_neutral" onclick="{! c.closeDialog}">Cancel</button>
                    <button class="slds-button slds-button_brand" onclick="{! c.submitForm}">Ok</button>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop " aura:id="Modalbackdrop"></div>
    </div>


    <aura:if isTrue="{!v.Spinner}">
        <div aura:id="spinnerId" class="slds-spinner_container" style="z-index: 10000 !important;">
            <lightning:spinner alternativeText="Loading" size="large" />
        </div>       
    </aura:if>    
    <aura:html tag="style">
    </aura:html>    
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner />
    </aura:if>
    
    <div class="modal-header slds-modal__header slds-size_1-of-1" >
        <h4 class="title slds-text-heading--medium">Assign ERC</h4>
    </div>
    <div class="slds-modal__content slds-align_absolute-center slds-size_1-of-1 slds-is-relative" >
        <lightning:recordEditForm aura:id="editRecord" recordId="{!v.recordId}" objectApiName="Account" 
                                  onsuccess="{!c.onRecordSuccess}" onerror="{!c.onRecordError}" onsubmit="{!c.onRecordSubmit}"
                                   onload="{!c.recordLoaded}">
             <lightning:outputField fieldName="Name" /> 
             <label for="ercField" class="slds-form-element__label">ERC</label>
                <lightning:inputField fieldName="AKERC__c" variant="label-hidden" aura:id="ercField"/>
            <lightning:outputField fieldName="ERC_Numeric__c" style="display:none"/>         
        </lightning:recordEditForm> 
    </div>    
    <div class="modal-footer slds-modal__footer slds-size_1-of-1" >
            <button class="slds-button slds-button_neutral" onclick="{! c.closeModal}">Cancel</button>
            <button class="slds-button slds-button_brand" onclick="{! c.validateERC}">Save</button>
    </div>  
    

        
</aura:component>