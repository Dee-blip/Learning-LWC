<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" controller="HD_CMR_BlackoutPeriod">
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="servoutg" type="BMCServiceDesk__Projected_Service_Outage__c" default=""/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
    
    
    <div class="slds-page-header slds-box">
        <div class="slds-grid">
            <div class="slds-col slds-has-flexi-truncate">
                <div class="slds-media slds-no-space slds-grow">
                    <div class="slds-media__figure">
                        <span class="slds-icon_container slds-icon-standard-opportunity" title="Description of icon when needed">
                            <lightning:icon iconName="standard:event" size="medium" alternativeText="ServiceOutage" />
                        </span>
                    </div>
                    <div class="slds-media__body">
                        <nav>
                            <ol class="slds-breadcrumb slds-line-height_reset">
                                <li class="slds-breadcrumb__item">
                                    <span>Service Outage</span>
                                </li>
                            </ol>
                        </nav>
                        <h1 class="slds-page-header__title slds-m-right_small slds-align-middle slds-truncate" title="{!v.servoutg.Name}">{!v.servoutg.Name}</h1>
                    </div>
                </div>
            </div>
            <div class="slds-col slds-no-flex slds-grid slds-align-top">

                
                <div class="slds-button-group" role="group">
                    <button class="slds-button slds-button_neutral" onclick="{!c.soEdit}">
                        <lightning:icon iconName="utility:edit" size="x-small" alternativeText="Edit Record" />
                        Edit
                    </button>
                    <aura:if isTrue="{!v.servoutg.BMCServiceDesk__Inactive__c == false}">
                        <button class="slds-button slds-button_neutral" onclick="{!c.soactivate}">
                            <lightning:icon iconName="utility:ban" size="x-small" alternativeText="Inactive" />
                            Deactivate
                        </button>
                    </aura:if>
                    <aura:if isTrue="{!v.servoutg.BMCServiceDesk__Inactive__c == true}">
                        <button class="slds-button slds-button_neutral" onclick="{!c.soactivate}">
                            <lightning:icon iconName="utility:success" size="x-small" alternativeText="Inactive" />
                            Activate
                        </button>
                   </aura:if>	     
                   
                </div>
            </div>
        </div>
    </div>
    
    
</aura:component>