<!--=====================================================================================================+
    Component name      :   SC_PS_PageLayout_Buttons 
    Author              :   Supreeth,Sumukh,Himanshu
    Created             :   10-Sep-18
    Purpose             :  Component for dynamic buttons for different record types in Service Cloud
             
    Last Modified Developer                     Purpose            
    ============= ========================      =======
    10-SEP-18       Supreeth,Sumukh,Himanshu    ESESP-1529: Initial Development
    07-FEB-18       Sumukh SS                   ESESP-1920: Adding support for Technical Buttons
    25-03-19        Sumanth S Naik              Adding check for SecSales and SecLaw RecordType
    15-05-19        Aditya Sonam                ESESP-2278: Adding button Tools and changing Closed Invalid btn Label to Invalid
    22-09-19        Pinkesh                     ESESP-2316: Quality Coaching Create/Edit button
	29-04-20		Sumukh SS					Adding support for SOCC Non-console navigation
	30-06-2020		Vandhana					ESESP-3524 : Updated PS Button formatting
    22 July 2020    Sharath Prasanna            ESESP-3659: Changes for Billing Case migration
    25-Aug-2021     Jay Rathod                  ESESP-5716 : Added message channel support in order to invoke actions remotely
+=====================================================================================================-->
<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" controller="SC_Case_LightningUtility" access="global">
    
    <!--Get the record ID of the case-->
    <aura:attribute name="recordId" type="Id" />
    
    
    <!--Checks if Indirect Modal is Open -->
    <aura:attribute name="isOpenIndirect" type="boolean" default="false" />
    <!--Checks if Clone Modal is Open -->
    <aura:attribute name="isOpenCloneEdit" type="boolean" default="false" />
    
    <!-- Clone Case for Billing -->
    <aura:attribute name="isOpenBillingClone" type="boolean" default="false" />
    
    <aura:attribute name="ClonedCaseId" type="Id" />
    <aura:attribute name="Spinner" type="boolean" default="false"/>
    <!--Attribute for the case record type for dynamic buttons -->
    <aura:attribute name="CaseRecordType" type="string"/>
    <aura:attribute name="casestatus" type="string"/>
    <aura:attribute name="isOpenCloseInvalidEdit" type="boolean" default="false"/>
    <aura:handler event="force:refreshView" action="{!c.doInit}"/>
    <aura:attribute name="EditEscalatedCase" type="boolean" default="false"/>
    <aura:attribute name="ParentCaseId" type="Id"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <!-- Register Event to pass parameters to utility bar component for Quality Review -->
    <aura:registerEvent name="qualityCoachingEvent" type="c:SC_QualityCoaching_Event"/>
    
    <lightning:workspaceAPI aura:id="EditCaseworkspace"/>
    
    <!--===================Aura attributes for SOCC Lightning Migration===================-->
    <aura:attribute name="isSoccTemplate" type="boolean" default="false" />
    <aura:attribute name="EscalationSpinner" type="boolean" default="false" />
    
    <aura:attribute name="options" type="List" default="[
                                                        {'label': 'Professional Service', 'value': 'PS'},
                                                        {'label': 'Akatec', 'value': 'Akatec'},
                                                        {'label': 'AMG', 'value': 'AMG'},
                                                        {'label': 'NetOps', 'value': 'NetOps'}                                                  
                                                        ]"/>
    
    <aura:attribute name="value" type="String" default="PS"/>    
    <aura:attribute name="CurrentStep" type="String" default="1"/>
    <aura:attribute name="ChoosenEscalateOption" type="String" default="PS"/>
    <!-- Aura attributes for report link -->
    <aura:attribute name="reportid" type="String"/>
    <aura:attribute name="AkamAccountId" type="String"/>
    <aura:attribute name="CreatedCaserecordId" type="Id"/>
    <aura:attribute name="rcaSpinner" type="boolean" default="false" />
    <aura:attribute name="rcaTransitioButton" type="boolean" default="false" />
    <aura:attribute name="isModalOpen" type="boolean" default="false"/>
    <aura:attribute name="dormantMode" type="Boolean" default="false" access="public"/>
    <lightning:messageChannel type="scPageLayoutButtonOpen__c" scope="APPLICATION" onMessage="{!c.onRemoteButtonOpenReceived}"/>
    <!--===============================================================================================-->
    
    
    <aura:if isTrue="{!v.isOpenIndirect}">
        <div role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open slds-modal_large" >
            <div class="slds-modal__container">
                <div class="slds-modal__header">
                    <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModal}">
                        X<span class="slds-assistive-text">Cancel</span>
                    </button>
                    <h2 id="header43" class="slds-text-heading--medium">
                        Select Indirect Customer
                        
                    </h2>
                </div>
                
                <div class="slds-modal__content slds-p-around--medium slds-scrollable_none" style="height: 1400px;">
                    
                    <div class="slds-grid slds-wrap">
                        
                        <div class="slds-large-size--1-of-3 ">
                            
                        </div>
                        
                        <iframe src="{!'/apex/IndirectCustomerPopup?id='+v.recordId}" width = "100%" height="500px" frameBorder="0" >
                        </iframe>
                        
                        &nbsp; &nbsp;
                    </div>                   
                </div>
                x
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop--open"></div>
    </aura:if>
    
    
    
    <!-- Clone case modal window -->
    <aura:if isTrue="{!v.isOpenCloneEdit}">
        <div role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open slds-modal_large" >
            <div class="slds-modal__container">
                <div class="slds-modal__header">
                    
                    <h2 id="header43" class="slds-text-heading--medium">
                        Cloned Case
                    </h2>
                </div>
                
                <div class="slds-modal__content slds-p-around--medium" style="height: 1400px;">
                    <force:recordEdit aura:id="edit" recordId="{!v.ClonedCaseId}"/>  
                    
                </div>
                <footer class="slds-modal__footer">
                    <button class="slds-button slds-button_neutral" onclick="{!c.CancelClone}">Cancel</button>
                    <button class="slds-button slds-button_brand" onclick="{!c.SaveClone}">Save</button>
                </footer>
            </div>
        </div>
        
        <div class="slds-backdrop slds-backdrop--open"></div>
        
    </aura:if>
    
    <!--Close Case Invalid Modal-->
    <aura:if isTrue="{!v.isOpenCloseInvalidEdit}">
        <div role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open slds-modal_small" >
            <div class="slds-modal__container" >
                <div class="slds-modal__header" style="background:rgb(3, 46, 97); color:white;">
                    
                    <h2 id="header43" class="slds-text-heading--medium">
                        Mark this case as Invalid? &#128465;
                    </h2>
                </div>
                
                <div class="slds-modal__content slds-p-around--medium" >
                    <lightning:textarea
                                        aura:id="enter-close"
                                        name="enter close"
                                        label="Enter Comments"
                                        />
                </div>
                <footer class="slds-modal__footer" style="background:rgb(3, 46, 97)">
                    <button class="slds-button slds-button_text-destructive" onclick="{!c.CloseModal}">Nope</button>
                    <button class="slds-button slds-button_success" onclick="{!c.saveInvalidCase}">Do it Already!</button>
                </footer>
            </div>
        </div>
        
        <div class="slds-backdrop slds-backdrop--open"></div>
        
    </aura:if>
    
    <!--================================== Esscalation Logic for SOCC =============================================================-->
    
    <aura:if isTrue="{!v.isSoccTemplate}">
        
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open ">
            <div class="slds-modal__container">
                <aura:if isTrue="{!v.EscalationSpinner}">
                    <lightning:spinner />
                </aura:if>
                <!-- ###### MODAL BOX HEADER Start ######-->
                <header class="slds-modal__header" style="background:rgb(3, 46, 97);">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.CloseModal }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate" style="background:rgb(3, 46, 97);color:white">Escalate Case&#128293;Ô∏è</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <aura:if isTrue="{!v.CurrentStep=='1'}">
                        
                        <lightning:radioGroup name="radioGroup"
                                              aura:id="EscalateChoice"
                                              label="Choose to whom you want to escalate to?"
                                              options="{! v.options }"
                                              onchange="{! c.handleChange }"
                                              value="{! v.value }"
                                              type="radio"/>
                        <br/>
                    </aura:if>
                    <aura:if isTrue="{!v.CurrentStep=='2'}">
                        
                        <aura:if isTrue="{!v.EditEscalatedCase}">
                            <b>Please fill-in the required details for the child case to be created.</b>
                            
                            <br/>
                            <lightning:recordEditForm aura:id="editForm"
                                                      recordId="{!v.CreatedCaserecordId}"
                                                      onsubmit="{!c.handleSubmit}"
                                                      objectApiName="Case">
                                <!-- the messages component is for error messages -->
                                <lightning:messages />
                                <lightning:inputField fieldName="Description" />
                                <lightning:inputField fieldName="Living_Summary_Next_Steps__c" />
                                <lightning:inputField fieldName="Customer_Expectations__c" />
                                <lightning:inputField fieldName="Service__c" />
                                <lightning:inputField fieldName="Request_Type__c" />
                                <lightning:inputField fieldName="Request_Sub_Type__c" />
                                
                                <div class="slds-m-top_medium">
                                    <lightning:button variant="brand" type="submit" name="save" label="Save" />
                                </div>
                            </lightning:recordEditForm>
                            
                        </aura:if>                    
                    </aura:if>
                    
                    <aura:if isTrue="{!v.CurrentStep=='3'}">
                        
                        <b>All done!&#128513; The child case created will open in a new browser tab. Case owner has to be changed manually!</b>
                        
                    </aura:if>
                    
                    <aura:if isTrue="{!v.CurrentStep=='1'}">
                        <br/>
                        <button class="slds-button slds-button_brand" style="float: right;margin-top: 5px;" onclick="{!c.handlenext}">Next</button>
                    </aura:if>
                    
                </div>
                <!--###### MODAL BOX FOOTER Part Start ######-->
                <footer class="slds-modal__footer">
                    <lightning:progressIndicator currentStep="{!v.CurrentStep}" type="path" variant="base">
                        <lightning:progressStep label="Escalate to?" value="1"/>
                        <lightning:progressStep label="Fill Details" value="2"/>
                        <lightning:progressStep label="Completed!" value="3"/>
                    </lightning:progressIndicator>
                    
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>            
    </aura:if>
    
    <!--============================================================================================================================-->   
    <!-- Spinner which gets invoked based on event -->
    <aura:if isTrue="{!v.Spinner}">
        <lightning:spinner />
    </aura:if>

    <!--ESESP-3659: Changes for Billing Case migration: Clone Case Modal Billing-->
    <aura:if isTrue="{!v.isOpenBillingClone}">
        <div role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open slds-modal_small" >
            <div class="slds-modal__container" style="width:30% !important; min-width: 0em !important">
                <div class="slds-modal__header" style="background:rgb(3, 46, 97); color:white;">
                    
                    <h2 id="header43" class="slds-text-heading--medium">
                        Clone Multiple Cases
                    </h2>
                </div>
                
                <div class="slds-modal__content slds-p-around--medium" >
                    <lightning:input type="number" aura:id="billingClone" name="input1" label="Copies to Clone" />               
                </div>
                <footer class="slds-modal__footer" style="background:rgb(3, 46, 97)">
                    <button class="slds-button slds-button_text-destructive" onclick="{!c.toggleBillingModal}">Nope</button>
                    <button class="slds-button slds-button_success" onclick="{!c.cloneBillingRecords}">Clone!</button>
                </footer>
            </div>
        </div>
        
        <div class="slds-backdrop slds-backdrop--open"></div>
        
    </aura:if>
    
    <!--Custom Buttons Code-->
    <aura:if isTrue="{!v.dormantMode == false}">
        <div  align="left" class="slds-box slds-theme_default">
            <lightning:buttonGroup>

                <aura:if isTrue="{!or(v.CaseRecordType=='SecSales',v.CaseRecordType=='SecLaw')}">
                    <lightning:button label="Re-open" onclick="{!c.reopen}"/>
                </aura:if>
                <!--Buttons for PS Record Type-->
                <aura:if isTrue="{!v.CaseRecordType=='Professional Services'}">
                    <lightning:button class="psButtonMarginClass borderRadiusPS" label="Edit" onclick="{!c.EditCaseModal}" />
                    <lightning:button class="psButtonMarginClass borderRadiusPS" label="Reopen" onclick="{!c.reopen}"/>
                    <lightning:button class="psButtonMarginClass borderRadiusPS" label="Clone" onclick="{!c.clone}"/>
                    <lightning:button class="borderRadiusPS" label="Select Indirect Customer" onclick="{!c.IndirectCaseModal}"/>
                </aura:if>
                <!-- Buttons for technical record type-->

                <aura:if isTrue="{!v.CaseRecordType=='Technical'}">
                    <aura:if isTrue="{!v.casestatus!='Closed'}">
                        <aura:if isTrue="{!v.casestatus=='Mitigated / Solution Provided'}">

                            <lightning:buttonMenu alternativeText="Show menu" aura:id="menu" onselect="{! c.handleSelect }">
                                <lightning:menuItem value="Auto Close" label="Auto Close" />
                            </lightning:buttonMenu>
                        </aura:if>
                        <lightning:button label="Invalid" onclick="{!c.openCloseInvalidModal}"/>
                        <lightning:button label="Portal" onclick="{!c.NavigateToPortal}"/>
                        <lightning:button label="Tools" onclick="{!c.NavigateToTool}"/>
                        <lightning:button title="Select the indirect Customer" label="Indirect" onclick="{!c.IndirectCaseModal}"/>
                    </aura:if>
                    <aura:if isTrue="{!v.casestatus=='Closed'}">
                        <lightning:button label="Quality Coaching" onclick="{!c.qualityCoaching}"/>
                    </aura:if>

                </aura:if>

                <aura:if isTrue="{!v.CaseRecordType=='Managed Security'}">
                    <aura:if isTrue="{!v.casestatus!='Closed'}">
                        <lightning:buttonGroup class="buttonfont">
                            <lightning:buttonMenu iconName="utility:richtextbulletedlist"
                                                  iconSize="large"
                                                  variant="bare"
                                                  alternativeText="Settings"
                                                  onselect="{!c.attachexistingcase}">
                                <lightning:menuItem label="Attach existing case" value="AttachCase" class="buttonfont"/>
                                <lightning:menuItem label="All SOCC Cases for this Account" value="SOCC" class="buttonfont"/>
                                <lightning:menuItem label="Acknowledge Customer Response" value="AckCustResp" class="buttonfont"/>

                            </lightning:buttonMenu>
                            <lightning:button label="Invalid Case" onclick="{!c.openCloseInvalidModal}"/>
                            <lightning:button label="LUNA" onclick="{!c.NavigateToPortal}"/>
                            <lightning:button label="Escalate?&#128640;" onclick="{!c.EscalateSOCCCase}"/>
                        </lightning:buttonGroup>

                    </aura:if>
                    <aura:if isTrue="{!v.casestatus=='Closed'}">
                        <lightning:button label="Re-open" onclick="{!c.reopen}"/>

                    </aura:if>

                </aura:if>

                <aura:if isTrue="{!v.CaseRecordType=='Invalid Case'}">
                    <lightning:button label="Re-open" onclick="{!c.reopen}"/>
                </aura:if>

                <!-- Changes by Sharath for ESESP-3659:Billing Case -->
                <!-- Showing the Close invalid, Re-open and Indirect customer buttons -->
                <aura:if isTrue="{!v.CaseRecordType=='Billing'}">
                    <lightning:button label="Clone" onclick="{!c.toggleBillingModal}"/>
                    <aura:if isTrue="{!v.casestatus!='Closed'}">
                        <lightning:button label="Close Invalid" onclick="{!c.openCloseInvalidModal}"/>
                        <lightning:button title="Select the indirect Customer" label="Indirect Customer" onclick="{!c.IndirectCaseModal}"/>
                    </aura:if>
                    <aura:if isTrue="{!v.casestatus=='Closed'}">
                        <lightning:button label="Re-open" onclick="{!c.reopen}"/>
                    </aura:if>

                </aura:if>
                <!-- End of Billing Case changes -->

                <!-- Buttons for RCA Request record type-->
                <aura:if isTrue="{!v.CaseRecordType=='RCA Request'}">
                    <aura:if isTrue="{!v.rcaTransitioButton }">
                        <lightning:button label="Transition" onclick="{!c.openRCAPopup}" />
                    </aura:if>
                    <aura:if isTrue="{!v.casestatus=='Closed'}">
                        <lightning:button label="Quality Coaching" onclick="{!c.qualityCoachingRCA}"/>
                    </aura:if>

                </aura:if>
            </lightning:buttonGroup>


        </div>
    </aura:if>
    <aura:if isTrue="{!v.isModalOpen}">
            
            <!-- Modal/Popup Box starts here-->
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <aura:if isTrue="{!v.rcaSpinner}">
                    <lightning:spinner />
                </aura:if>
                <div class="slds-modal__container">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.closeModel }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">RCA Request Transition</h2>
                    </header>
                    <!--Modal/Popup Box Body Starts here-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                            <c:sc_RCA_TranstionComponent recordId="{!v.recordId}" oncloseTransitionModal="{!c.closeModel}" onshowSpinner="{!c.showSpinner}" onhideSpinner="{!c.hideSpinner}" onrefreshView="{!c.refreshView}"/>
                    </div>
                    
                    <!--Modal/Popup Box Footer Starts here-->
                    
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </aura:if>
    
</aura:component>