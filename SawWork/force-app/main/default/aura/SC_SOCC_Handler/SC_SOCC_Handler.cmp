<aura:component
                controller="SC_SOCC_RUN_BOOK"
                implements="lightning:actionOverride,lightning:isUrlAddressable,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
                access="global"
                >
    <!-- attributes -->
    <aura:attribute name="data" type="Object" />
    <aura:attribute name="columns" type="List" />
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="handlerId" type="String" />
    <aura:attribute name="selectedRowsCount" type ="Integer"/>
    <aura:attribute name="selectedRows" type="List"/>
    <aura:attribute name="selectedRowsForProcessing" type="List"/>
    <aura:attribute name="SituationDet" type="List" />
    
    <lightning:navigation aura:id="navService"/>
    <lightning:workspaceAPI aura:id="workspace"/>
    
    <!-- attribute to store list of all Handlers-->
    <aura:attribute name="HandlerIdList" type="List"/>
    
    <!-- attributes that will be passed to child -->
    <aura:attribute name="HandlerDetails" type="Object"/>
    <aura:attribute name="EscalationContactList" type="Object"/>
    
    <!-- attribute to store records for deleting -->
    <aura:attribute name="recordsforDeletion" type="Object[]"/>
    
    <!-- attribute to store records with pending Instructions -->
    <aura:attribute name="pendingHandlersInstructions" type="Object[]"/>
    
    
    <!-- Attribute for Modal Open/Close for Situation Handler Mappings -->
    <aura:attribute name="isModalOpen" type="boolean" default="false"/>
    <aura:attribute name="isAssociatedSitOpen" type="boolean" default="false"/>
    
    <!-- Attribute for Modal Open/Close for Situation Handler Mappings -->
    <aura:attribute name="isModalOpenDelete" type="boolean" default="false"/>
    
    <!-- Attribute for Modal for Pending Instructions -->
    <aura:attribute name="isModalPendingInstructions" type="boolean" default="false"/>
    
    <!-- Attribute to show/Hide delete button -->
    <aura:attribute name="showDeleteIfManager" type="boolean" default="false"/>
    
    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{!c.doInit}" />
    <aura:handler name="destroy" value="{!this}" action="{!c.destroy}"/>
    
    <!-- event handlers -->
    <aura:handler name="handlerDeleteEvent" event="c:SC_SOCC_Handler_Delete_Event" action="{!c.doInit}" />
    
    <!-- events for refresh -->
    <aura:registerEvent name="handlerDeleteEvent" type="c:SC_SOCC_Handler_Delete_Event"/>
    <div class="slds-grid slds-gutters">
        <div class="slds-col slds-float_left">
            <span><h2 class="sectionHeading">{!v.data.length} Handlers</h2></span>
        </div>
        <div class="slds-col">
            <!--button for mass delete -->
            <div style="text-align:right">
                <button class="slds-button" onclick="{!c.doInit}"><lightning:icon iconName="action:refresh" size="xx-small" alternativeText="Refresh Data"/></button>
                <lightning:button label="Create Handler" variant="Brand" onclick="{!c.createHandler}" />
                <aura:if isTrue="{!v.showDeleteIfManager}">
                    <lightning:button label="Delete" variant="destructive" onclick="{!c.deleteAll}"/>
                </aura:if> 
            </div>
        </div>
    </div>
    
    <aura:if isTrue="{!v.isAssociatedSitOpen}">
        
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open" style="
                                                                                                                                                                                    width: 50%;">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModel }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h1 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Associated Situations</h1>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <aura:iteration items="{!v.SituationDet}" var="det" >
                        
                        <p><b>Situation Name: </b> {!det.Situation__r.Name}</p>
                        
                    </aura:iteration>
                </div>
                
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>        
    </aura:if>
    
    <!-- lightning data table -->
    <div class="slds-m-top--xx-small">
        <lightning:datatable
                             keyField="id"
                             data="{! v.data }"
                             columns="{! v.columns }"
                             onrowaction="{! c.handleRowAction }"
                             onrowselection="{! c.updateSelectedText }"
                             selectedRows="{!v.selectedRows}"
                             class="slds-m-top--xx-small"/>
    </div>
    
    
    <!-- Modal Section -->
    <!-- Modal Section For Situation to Handler Mappings -->
    <aura:if isTrue="{!v.isModalOpen}">
        
        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModel }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Handler Detail</h2>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <c:SC_SOCC_Create_Handler recordId="{!v.handlerId}"/>
                </div>
                <!--Modal/Popup Box Footer Starts here-->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral"
                                      label="Cancel"
                                      title="Cancel"
                                      onclick="{! c.closeModel }"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
    <!-- Modal Section For Situation to Handler Mappings  Ends -->
    <!-- MOdal Section Ends -->
    
    <!-- Modal Section -->
    <!-- Modal Section For Situation to Handler Mappings -->
    <aura:if isTrue="{!v.isModalOpenDelete}">
        
        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container" style="
                                                      max-width: 80% !important;width: 100% !important;">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModelDelete }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">You're attempting to Delete Handler/s. Are you sure?"</h2>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    
                    <div class="slds-align-absolute-center">
                        <ol>
                            <aura:iteration items="{!v.recordsforDeletion}" var="item">
                                
                                <li class="slds-align--absolute-center slds-text-heading_label">{!item.Name}</li>
                            </aura:iteration>
                        </ol>
                    </div>
                </div>
                <!--Modal/Popup Box Footer Starts here-->
                <footer class="slds-modal__footer">
                    <lightning:button variant="Brand"
                                      label="Confirm Delete"
                                      title="Delete"
                                      onclick="{! c.DeleteHandlerRecords }"/>
                    <lightning:button variant="neutral"
                                      label="Cancel"
                                      title="Cancel"
                                      onclick="{! c.closeModelDelete }"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
    <!-- Modal Section For Situation to Handler Mappings  Ends -->
    <!-- MOdal Section Ends -->
    
    <!-- Modal Section -->
    <!-- Modal Section For Situation to Handler Mappings -->
    <aura:if isTrue="{!v.isModalPendingInstructions}">
        
        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container" style="
                                                      max-width: 80% !important;
                                                      width: 100% !important;
                                                      ">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModelpendingInstruction }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">The following handlers cannot be deleted since they have an instruction pending for Approval. Please complete the approval process before deleting!"</h2>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    
                    <div class="slds-align-absolute-center">
                        <ol>
                            <aura:iteration items="{!v.pendingHandlersInstructions}" var="item">
                                
                                <li class="slds-align--absolute-center slds-text-heading_label">{!item}</li>
                            </aura:iteration>
                        </ol>
                    </div>
                </div>
                <!--Modal/Popup Box Footer Starts here-->
                
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
    <!-- Modal Section For Situation to Handler Mappings  Ends -->
    <!-- MOdal Section Ends -->
    
</aura:component>