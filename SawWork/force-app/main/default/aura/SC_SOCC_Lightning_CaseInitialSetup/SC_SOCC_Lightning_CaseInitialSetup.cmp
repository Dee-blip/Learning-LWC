<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
                controller="SC_SOCC_Case_LightningUtility"  access="global"  >
    
    <aura:attribute name="Spinner" type="boolean" default="false"/>
    <aura:attribute name="Optional" type="boolean" default="false"/>    
    <aura:attribute name="CurrentStep" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:handler event="force:refreshView" action="{!c.doInit}" />
    <!-- For Case Setup Path Value -->
    <aura:attribute name="value" type="String" default="1" />
    <aura:attribute name="CaseRecordID" type="String" />
    
    <!--Aura event to refresh Authorized contacts component-->
    <aura:registerEvent name="c:SC_Akatec_MyEscalations_Refresher" type="c:SC_Akatec_MyEscalations_Refresher"/>
    
    <!-- For Policy Domain Selector -->
    <aura:attribute name="options" type="List" />
    <aura:attribute name="haveProducts" type="boolean" default="true"/>
    <aura:attribute name="selectedValue" type="String" />
    
    <!-- For Situation Selector -->
    <aura:attribute name="Situationoptions" type="List" />
    <aura:attribute name="haveSituations" type="boolean" default="true"/>
    <aura:attribute name="SituationselectedValue" type="String" />
    
    <!-- Spinner which gets invoked based on event -->
    <aura:if isTrue="{!v.Spinner}">
        <div aura:id="spinnerId" class="slds-spinner_container">
            <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                <span class="slds-assistive-text">Loading</span>
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
    </aura:if>
    
    <header class="slds-modal__header" style="background:rgb(3, 46, 97);padding-bottom: 5px;padding-top: 5px;"
            >
        <h2 id="modal-heading-01"
            class="slds-text-heading_medium slds-hyphenate"
            style="background:rgb(3, 46, 97);color:white"
            >Initial Case Setup</h2>
    </header>
    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1" style="height: 10rem;">
        <aura:if isTrue="{!v.CurrentStep=='1'}"> Choose Sub-Type and Service Category
            <lightning:recordEditForm aura:id="editForm"
                                      recordId="{!v.CaseRecordID}"
                                      objectApiName="Case">
                <!-- the messages component is for error messages -->
                <lightning:messages />
                <lightning:inputField fieldName="Sub_Type__c" /> 
                <lightning:inputField aura:id="Service_CategoryFieldValue" fieldName="Service_Category__c" />
                <div class="slds-m-top_medium">
                    <lightning:button variant="brand" name="save" label="Save and Move on!" onclick="{!c.SaveandMoveon}"/>
                    
                </div>
            </lightning:recordEditForm>
        </aura:if>
        
        <aura:if isTrue="{!v.CurrentStep=='2'}"> Choose the Case Product
            <c:SC_CaseProductSelector CaseRecID="{!v.CaseRecordID}" isChildComponent="true"/>
            <button class="slds-button slds-button_brand" style="float: left;" onclick="{!c.HeadBack}">&#x2190;Back Up!</button>                                
            
        </aura:if>
        
        <aura:if isTrue="{!v.CurrentStep=='3'}">
            Choose the Policy Domain and Situation combination
            <aura:if isTrue="{!v.haveProducts}">
                <div align="left" class="slds-box slds-theme_default">
                    <div class="slds-grid slds-gutters">
                        <div class="slds-col slds-size_1-of-3">
                            <lightning:select name="PolicyDomainId" label="Policy Domain:"
                                              aura:id="PolicyDomainId" value="{!v.selectedValue}"  onchange="{!c.getsituations}">
                                <aura:iteration items="{!v.options}" var="option">
                                    <option text="{!option.label}"
                                            value="{!option.id}"
                                            selected="{!option.selected}"  />
                                </aura:iteration>
                            </lightning:select>
                        </div>
                        <div class="slds-col slds-size_1-of-3">
                            <aura:if isTrue="{!v.haveSituations}">
                                <lightning:select name="SituationId" label="Situation:"
                                                  aura:id="SituationIdselected" value="{!v.SituationselectedValue}"  >
                                    <aura:iteration items="{!v.Situationoptions}" var="Situationoption">
                                        <option text="{!Situationoption.label}"
                                                value="{!Situationoption.id}"
                                                selected="{!Situationoption.selected}"  />
                                    </aura:iteration>
                                </lightning:select>
                                <aura:set attribute="else">
                                <div class="slds-text-heading_small slds-text-align_center slds-text-color_error" style="padding-top: 30px;"
                                     >No Situation exists!</div><br/>
                            </aura:set>
                            </aura:if>
                        </div>
                        <div class="slds-col slds-size_1-of-3" style="margin-top: 1.5rem;">
                            <lightning:button variant="Neutral" label="Save both!"
                                              title="Save both!"
                                              onclick="{!c.savePolicyDomainjs}"/>
                        </div>
                    </div>
                </div>
                <aura:set attribute="else">
                    <div class="slds-box slds-theme_default slds-text-heading_small slds-text-align_center slds-text-color_error"
                         >No Policy Domain exists for this Account</div><br/>
                    <aura:if isTrue="{!!v.Optional}">
                        <button class="slds-button slds-button_destructive" style="float: right;" onclick="{!c.sendEmail}">Send Email to Account Team!</button> 
                    </aura:if>
                    <aura:if isTrue="{!v.Optional}">
                        <button class="slds-button slds-button_brand" style="float: right;" onclick="{!c.skipStep}">Skip! &#x2192;</button>                                
                    </aura:if>
                    
                </aura:set>
            </aura:if>
            <button class="slds-button slds-button_brand" style="float: left;" onclick="{!c.HeadBack}">&#x2190;Back Up!</button>                                
        </aura:if>
        
        <aura:if isTrue="{!v.CurrentStep=='4'}">
            Uh-Oh! Looks like this case is not authorized. Head over to the
            "Authorized Contacts" tab below and authorize this case! &#128556;
            <br/><br/>
            <aura:if isTrue="{!v.Optional}">
                <button class="slds-button slds-button_brand" style="float: right;" onclick="{!c.skipStep}">Skip! &#x2192;</button>                                
            </aura:if>
                       <!-- <button class="slds-button slds-button_brand" style="float: left;" onclick="{!c.HeadBack}">&#x2190;Back Up!</button>  -->                              
        </aura:if>
    </div>
    <!--###### MODAL BOX FOOTER Part Start ######-->
    <footer class="slds-modal__footer">
        <lightning:progressIndicator currentStep="{!v.CurrentStep}"
                                     type="path"
                                     variant="base">
            <lightning:progressStep label="Choose Service Category" value="1" />
            <lightning:progressStep label="Choose Case Product" value="2" />
            <lightning:progressStep label="Choose Policy Domain and Situation" value="3" />
            <lightning:progressStep label="Authorize Case!" value="4" />
        </lightning:progressIndicator>
    </footer>
</aura:component>