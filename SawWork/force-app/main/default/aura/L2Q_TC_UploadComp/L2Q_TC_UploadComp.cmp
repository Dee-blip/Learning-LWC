<aura:component implements="force:hasRecordId,force:lightningQuickAction" access="global" controller="L2Q_DocusignForPartnerPassThrough">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="hasErrors" type="Boolean" default="false" />
    <aura:attribute name="showLoadingSpinner" type="boolean" default="false" />

    <aura:attribute name="showSuccessMessage" type="Boolean" default="false" />
    <aura:attribute name="errorMessage" type="String" />
    <aura:attribute name="successMessage" type="String" />
    <aura:if isTrue="{!v.showLoadingSpinner}">
        <div class="slds-text-body_small slds-text-color_error">Uploading... 
           <img src="/changemgmt/img/spinner24.gif" class="spinner-img" alt="Loading"/>'
        </div>
     </aura:if>

    <aura:if isTrue="{! v.hasErrors }">
            <ui:message title="" severity="error" closable="false">
                     <strong>
            ERROR:
        </strong>
        <br />
        <ui:outputRichText class="slds-text-longform" value="{! v.errorMessage }" />
        </ui:message>
    </aura:if>
    <aura:if isTrue="{! v.showSuccessMessage }">
        <ui:message title="" severity="confirm" closable="false">
                 <strong>
        SUCCESS:
    </strong>
    <br />
    <ui:outputRichText class="slds-text-longform" value="{! v.successMessage }" />
    </ui:message>
</aura:if>
    <lightning:fileUpload label="" name="fileUploader" multiple="true" fileFieldName="Passthrough_TC__c" fileFieldValue="true" recordId="{!v.recordId}" onuploadfinished="{! c.handleUploadFinish }" />
</aura:component>