<aura:component controller="SF1_Controller_ListViewObjectSelection" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >

	<aura:attribute name="listViewObjects" type="String[]" /> 
    <aura:attribute name="selectedSObject" type="String" /> 
    <aura:handler name="init" value="{!this}" action="{!c.initialize}"/>
    <aura:registerEvent name="navListView" type="c:SF1_Event_NavigateToListView"/>
    
    <ui:scrollerWrapper class="scrollerSize">
    	<div class="sectionOne slds-is-relative">
            <header class=" headerLayout uiBlock oneHeader" id="oneHeader">
                <div class="forceHeaderLayout">
                    <ui:inputSelect aura:id="selection" change="{!c.changeSelection}">
                        <aura:iteration items="{!v.listViewObjects}" var="item">
                            <ui:inputSelectOption text="{!item}" label="{!item}"/>
                        </aura:iteration>
                    </ui:inputSelect>
                </div>
            </header>
    	</div>
    </ui:scrollerWrapper>
    
	<ui:scrollerWrapper class="scrollerSize">
        <div class="sectionTwo">
            <c:SF1_Component_ListViewCustom sObjectName="Account" currentOffset="0" pageSize="10" useFilter="false"/>
        </div>
    </ui:scrollerWrapper>
    
</aura:component>