<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,force:lightningQuickAction,force:hasSObjectName,force:hasRecordId" access="global" controller="LeanData_Account_Match_Controller">
    <aura:attribute name="InitErrors" type="String" default="default value" />
    <aura:attribute name ="hasInitWarnings" type="boolean" default="false"/>
    <aura:attribute name="disableAcceptButton" type="boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="leadObj" type="Lead" />
    <aura:attribute name="sobjecttype" type="String" default="{!v.sObjectName}"/>
    <aura:attribute name="ErrorMessage" type="String"/>
    <aura:attribute name="successMessage" type="String"/>
    <aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/>
     <aura:attribute name="homeURL" type="String" />
    <lightning:card title = "Accept LeanData Account">
        <p class="slds-p-horizontal_small">
     <div>
        <center>
            <lightning:spinner variant="brand" size="large" aura:id="ltngSpinner" class="slds-hide"/>
        </center>
    </div>
    <aura:if isTrue="{!v.hasInitWarnings}">
        <div  style="color:red;" aura:id="WarnMessageId">
            <p>     Warnings: <aura:unescapedHtml value="{!v.InitErrors}" /> </p>    
        </div>
    </aura:if>
    <div class="slds-hide" style="color:red;" aura:id="ErrorMessageId">
        <p>     Errors: </p>
        <aura:unescapedHtml value="{!v.ErrorMessage}" />
    </div>
    <div class="slds-box slds-theme_shade slds-theme_alert-texture slds-hide" 
                 style="color:green;" aura:id="SuccessId">
        <p><strong>{!v.successMessage} </strong>
         	Please wait. You are being redirected.
        </p>
    </div>
	<div>
		{!$Label.c.LeanData_Account_Match_Confirm_Prompt}
	</div>
    <br></br>
    <lightning:button variant="brand" label="Accept Match" 
                              iconName="utility:approval" iconPosition="center"
                              onclick="{!c.updateAccount}"
                      		  disabled="{!v.disableAcceptButton}"/>
            </p>
        </lightning:card>
</aura:component>