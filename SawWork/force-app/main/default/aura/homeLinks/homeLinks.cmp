<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" controller="SC_UCD_HomePage" access="global" >
    
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="objectName" type="String"/>
    <aura:attribute name="outOfOfficeLabel" type="String"/>
    <aura:attribute name="currentUser" type="User" />
    <aura:attribute name="recordError" type="String"/>
    
    <aura:attribute name="caseViewVal" type="Boolean" />
    
    <lightning:messageChannel type="ucdMessageChannel__c" aura:id="ucdMessageChannel"/>
        <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <force:recordData fields="PS_Out_of_Office__c"
                      recordId="{!$SObjectType.CurrentUser.Id}"
                      targetFields="{!v.currentUser}"
                      mode="VIEW"
                      targetError="{!v.recordError}"
                      recordUpdated="{!c.onRecordUpdatedUser}"
                      />    
    
    <div>
        <lightning:verticalNavigation onselect="{! c.navigateToPage}" selectedItem="{! v.objectName}">
            <lightning:verticalNavigationSection label="PSA Links">
                <lightning:verticalNavigationItem label="Approve Multiple Timecards" name="/apex/PSA_TCApproveNew" />
                <lightning:verticalNavigationItem label="Set PSA Delegate Approver" name="/apex/PSA_DelegatedApproval" />
                <lightning:verticalNavigationItem label="Create a Timecard" name="/apex/pse__PSATimecardEntryForward" />
                <lightning:verticalNavigationItem label="Project Timeline and Status Updates" name="/apex/PSA_ProjectUpdate_Page" />
                <lightning:verticalNavigationItem label="PSA Approval Notification Preference" name="/aMp" />
                <lightning:verticalNavigationItem label="Self-Assignment" name="/apex/pse__SelfAssignment" />   
                <lightning:verticalNavigationItem label="{!v.outOfOfficeLabel}" name="/apex/PSA_SetOutOfOffice" />   
            </lightning:verticalNavigationSection>
        </lightning:verticalNavigation>
    </div>
      
        <div style="margin-left: 32px;">
            <lightning:input label="Unified PS Workbench" aura:id="caseViewVal" type="toggle" checked="{!v.caseViewVal}" name="caseViewValue" onchange="{!c.caseViewChange}" messageToggleInactive="Daily Case Management" messageToggleActive="Case Management View" />
        </div>
    
    <!--<c:PSA_OpenRecordCreatePage recordId ="{! v.recordId}" objectName = "{! v.objectName}"/>-->
</aura:component>