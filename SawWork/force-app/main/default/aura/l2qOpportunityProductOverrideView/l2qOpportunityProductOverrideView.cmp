<aura:component
  implements="force:lightningQuickActionWithoutHeader,lightning:actionOverride,flexipage:availableForAllPageTypes,force:hasRecordId"
>
  <aura:attribute name="simpleRecord" type="Object" />
  <aura:attribute name="recordLoadError" type="String" />
  <force:recordData
    aura:id="recordLoader"
    recordId="{!v.recordId}"
    fields="OpportunityId"
    targetFields="{!v.simpleRecord}"
    targetError="{!v.recordLoadError}"
  />
  <aura:if isTrue="{!(v.simpleRecord != null)}">
    <c:l2qManageProductNavigation
      recordId="{!v.simpleRecord.OpportunityId}"
    ></c:l2qManageProductNavigation>
  </aura:if>
  <aura:if isTrue="{!(v.recordLoadError!=null)}">
    <lightning:card>
      <div> Error Occurred: "{!v.recordLoadError}" </div>
    </lightning:card>
  </aura:if>
</aura:component>