<aura:component implements="lightning:homeTemplate">
    
    <aura:attribute name="leftup" type="Aura.Component[]" />
    <aura:attribute name="rightup" type="Aura.Component[]" />
    <aura:attribute name="main" type="Aura.Component[]" /> 
    <aura:attribute name="left" type="Aura.Component[]" />
    <aura:attribute name="right" type="Aura.Component[]" />
    
    <div>  
        
        <lightning:layout >  
            
            <lightning:layoutItem size = "6">  
                
                {!v.leftup}  
                
            </lightning:layoutItem>  
            
            
            <lightning:layoutItem size = "6">  
                
                {!v.rightup}  
                
            </lightning:layoutItem>  
        </lightning:layout>  
    </div>  
    
    <div>
        <lightning:layout>
            <lightning:layoutItem flexibility="grow" class="limitHorz" >
                {!v.main}
                
            </lightning:layoutItem>
        </lightning:layout>
        
    </div>
    <div>  
        
        <lightning:layout >  
            
            <lightning:layoutItem size = "6">  
                
                {!v.left}  
                
            </lightning:layoutItem>  
            
            
            <lightning:layoutItem size = "6" class="limitheight">  
                
                {!v.right}  
                
            </lightning:layoutItem>  
            
        </lightning:layout>  
        
    </div>  
    
    
</aura:component>