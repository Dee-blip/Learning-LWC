<aura:component implements="force:hasRecordId,flexipage:availableForRecordHome,force:lightningQuickActionWithoutHeader" controller="IW_RoutingMessageChange" access="global" >
    
    

    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="show" type="Boolean" default="false"/>
    <aura:attribute name="message" type="String"/>
    <aura:attribute name="record" type="Object"/>
    <aura:attribute name="simpleRecord" type="Object"/>
    <aura:attribute name="newAccountError" type="String"/>

    <!-- <aura:handler name="init" value="{!this}" action="{!c.doInit}"/> -->

    <force:recordData aura:id="recordLoader"
      fields="Name,LastModifiedBy,Status__c,CreatedDate"
      recordId="{!v.recordId}"
      targetFields="{!v.simpleRecord}"
      targetRecord="{!v.record}"
      targetError="{!v.newAccountError}"
      recordUpdated="{!c.handleRecordUpdated}"
      />

    <aura:renderIf isTrue="{!v.show}">
        <!-- <lightning:card class="slds-notify slds-notify_alert slds-alert_warning" >

            
        </lightning:card> -->
        <div class="slds-notify slds-notify_alert slds-alert_warning" role="alert">
            <span class="slds-assistive-text">warning</span>
            <span class="slds-icon_container slds-icon-utility-warning slds-m-right_x-small" title="Description of icon when needed">
              <!-- <svg class="slds-icon slds-icon_x-small" aria-hidden="true">
                <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#warning"></use>
              </svg> -->
              <lightning:icon iconName="utility:warning" alternativeText="Warning!" title="Warning" />
            </span>
            <h2>
                {!v.message}
            </h2>
        </div>
    </aura:renderIf>
    

</aura:component>