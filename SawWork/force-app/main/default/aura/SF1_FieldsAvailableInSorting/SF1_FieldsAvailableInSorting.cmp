<aura:component implements="force:lightningQuickAction,force:hasRecordId,force:appHostable">
    
    <ltng:require scripts="{!$Resource.JQueryMinJS}" />
    <aura:attribute name="fieldName" type="String" />
    <aura:attribute name="ascOrDesc" type="String" default="Asc" />
    <aura:attribute name="indexVar" type="Integer" />
    <aura:attribute name="AscID" type="String" />
    <aura:attribute name="DescID" type="String" />
    <aura:attribute name="indicatorBoxID" type="String" />
    <aura:attribute name="presentationID" type="String" />
    <aura:attribute name="stateIndicatorID" type="String" />
    
    <aura:registerEvent name="SF1_showSortDetailsEvent" type="c:SF1_showSortDetailsEvent" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <li aura:id="{!v.presentationID}" id="{!v.presentationID}" role="presentation" onclick="{!c.presentationLI}" class="uiMenuItem uiRadioMenuItem forceSortFilterMenuItem">
        <a href="javascript:void(0);"  aria-disabled="false" tabindex="0" title="{!v.fieldName}" aria-checked="false" class="">
            <div class="label truncate" >{!v.fieldName}</div>
            <span aura:id="{!v.stateIndicatorID}" id ="{!v.stateIndicatorID}" class="stateIndicator">
                <div aura:id="{!v.indicatorBoxID}" id="{!v.indicatorBoxID}" class="indicatorBox">
                    <div aura:id="{!v.AscID}" id="{!v.AscID}" class="ascI" style="display:block;">
                        <lightning:icon iconName="utility:arrowup" size="xx-small" alternativeText="Asc"/>
                        <span>Ascending</span>
                    </div>
                    <div aura:id="{!v.DescID}" id="{!v.DescID}" class="desci" style="display:none;">
                        <lightning:icon iconName="utility:arrowdown" size="xx-small" alternativeText="Asc"/>
                        <span>Descending</span>
                    </div>
                </div>
            </span>
        </a>
    </li>
</aura:component>