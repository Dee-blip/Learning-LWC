<aura:component implements="lightning:actionOverride,flexipage:availableForRecordHome,force:hasRecordId" access="global" >

    <aura:attribute name="record" type="Object"/>
    <aura:attribute name="errorMsg" type="String"/>
    <aura:attribute name="isEditable" type="Boolean"/>

    <aura:handler name="change" value="{!v.record}" action="{!c.onDealLoad}" />   
     <force:recordData aura:id="recordLoader"
      recordId="{!v.recordId}"
      fields="['Approval_Stage__c', 'Requestor__c', 'GSS_Product__r.Name']"
      targetFields="{!v.record}"
      />
    
    <aura:if isTrue="{!v.isEditable}">
        <c:ddDealDesk recordId="{!v.recordId}" mode="edit"></c:ddDealDesk>
        
        <aura:set attribute="else">
            <div class="slds-card slds-p-around_medium">
                {!v.errorMsg}
            </div>
        </aura:set>
    </aura:if>
</aura:component>