<aura:component controller="SC_SOCC_Handler_Controller" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">
    <!--attributes for view Section -->
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="handlerRec" type="Object"/>
    <aura:attribute name="hasPendingInstruction" type="Boolean" default = "false"/>
    
    <!-- attributes to show/Hide Sections -->
    <aura:attribute name="showSituationInstruction" type="Boolean"  default="false"/>
    <aura:attribute name="showIgnoreCondition" type="Boolean"  default="false"/>
    <aura:attribute name="showEscalationList" type="Boolean"  default="false"/>
    
    <!-- init handler-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <aura:handler event="lightning:tabRefreshed" action="{! c.doInit }"/>
    <div class="slds-box" style="background-color:white">
        <br/>
        <lightning:recordViewForm recordId="{!v.handlerRec.Handler.Id}" objectApiName="Handler__c">
            
            <div class="slds-box">
                <aura:if isTrue="{!v.hasPendingInstruction}">
                    <span class="slds-badge slds-float_right slds-p-around_x-small status-indicator-badge" onmouseover="{!c.togglePendingInstructionToolTip}" onmouseout="{!c.togglePendingInstructionToolTip}"  aria-describedby="pendingInstructionTooltip">Instructions Pending</span>
                </aura:if>
                <span><h2 class="sectionHeading slds-text-title_caps"><b>Handler Details</b></h2></span>
                <br/>
                <lightning:outputField fieldName="Akam_Hanlder_Id__c" />
                <lightning:outputField fieldName="Name" />
                <lightning:outputField fieldName="Handler_Type__c" class="removeHyperLink"/>
                <lightning:outputField fieldName="Policy_Domain__c" />
                <aura:if isTrue="{!v.showSituationInstruction}">
                    <lightning:outputField fieldName="Situation_Instruction__c"/>
                </aura:if>
                <aura:if isTrue="{!v.showIgnoreCondition}">
                    <lightning:outputField fieldName="Ignore_Condition__c"/>
                </aura:if>
            </div>
            <br/>
            <div class="slds-box">
                <span><h2 class="sectionHeading slds-text-title_caps"><b>System Information</b></h2></span>
                
                <div class="slds-form-element">  
                    <div class="slds-grid slds-gutters">
                        <br/>
                        <div class="slds-col slds-size_1-of-2">
                            
                            <lightning:outputField fieldName="CreatedById" />
                            <lightning:outputField fieldName="CreatedDate" />
                        </div>
                        <div class="slds-col slds-size_1-of-2">
                            
                            <lightning:outputField fieldName="LastModifiedById" />
                            <lightning:outputField fieldName="LastModifiedDate" />
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <aura:if isTrue="{!v.showEscalationList}">
                
                <div class="slds-box">
                    
                    <span><h2 class="sectionHeading slds-text-title_caps"><b>Escalation Details</b></h2></span>
                    <br/>
                    <lightning:outputField fieldName="Escalation_List__c" />
                    <lightning:recordViewForm recordId="{!v.handlerRec.Handler.Escalation_List__c}" objectApiName="SC_SOCC_Escalation_List__c">           
                        <lightning:outputField fieldName="Instructions__c" class="removeHyperLink"/>
                    </lightning:recordViewForm>
                    
                    <c:SC_SOCC_EscalationContact_Edit aura:id="escalationContactEditSections" />                
                </div>
            </aura:if>
            
        </lightning:recordViewForm>
    </div>
</aura:component>