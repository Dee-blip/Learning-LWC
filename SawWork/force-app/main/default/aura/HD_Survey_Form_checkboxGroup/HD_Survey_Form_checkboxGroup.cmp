<aura:component >
    <aura:attribute name="value" type="String"/>
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="options" type="Map[]" default='[
                                                         {label: "Yes", value: "yes"},
                                                         {label: "No", value: "no"}
                                                         ]'/>
    
	<lightning:checkboxGroup name="Checkbox Group" aura:id="question2"
                                                 label="{!v.title}"
                                                 required="true"
                                                 options="{! v.options }"
                                                 value="{!v.value}"
                                                 />
</aura:component>