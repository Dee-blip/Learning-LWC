<aura:component controller="GSM_Controller_LA_LeadFromContact" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global">
    
    <aura:attribute name="isLoad" type="boolean" default="false"/>   
    <aura:attribute name="showC2AFields" type="boolean" default="false"/>
    <aura:attribute name="isError" type="boolean" default="false"/>
    <aura:attribute name="errorMessage" type="String" default=""/>
    <aura:attribute name="loadMessage" type="String" default=""/>
    <aura:attribute name="c2aRecordId" type="Id" />
    <aura:attribute name="isLeadPresentVar" type="Boolean" default="false"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div class="slds-grid slds-wrap" style="">
        
        
        
        
        <div class="slds-col slds-size--1-of-1">
            
            <div class="slds-page-header" style="background-color:white;">
                <div class="slds-media">
                    <div class="slds-media__figure">
                        <lightning:icon iconName="standard:lead" size="small" alternativeText="Lead" />
                    </div>
                    <div class="slds-media__body">
                        <h1 class="slds-page-header__title slds-text-heading_small slds-align-middle slds-truncate" title="CTA Details">CTA Details</h1>
                        <br/>
                        
                    </div>
                </div>
                
                <aura:if isTrue="{!!v.isLeadPresentVar}">
                    <div class="slds-text-align_left">
                        <aura:if isTrue="{!v.isError}">
                            <ui:message title="Error" severity="error" closable="false">
                                <div>
                                    <span class="slds-assistive-text">error</span>
                                    <div class="slds-notify__content">
                                        <p class="">{!v.errorMessage}</p>
                                        <lightning:button class="slds-m-top_small"
                                                          onclick="{!c.closeError}" label="Close" />
                                    </div>
                                </div>
                            </ui:message>                       
                        </aura:if>
                        <aura:if isTrue="{!!v.isLoad}">
                            <button class="slds-button slds-button_outline-brand" style="margin-bottom:2%" onclick="{! c.validateAndCreateLeadFromContact}">Create or Link Existing C2A</button>
                        </aura:if>
                        <aura:if isTrue="{!v.isLoad}">
                            {!v.loadMessage}
                            <div class="slds-align_absolute-center" style="height: 2rem;">
                                
                                <div role="status" class="slds-spinner slds-spinner_medium slds-spinner_inline">
                                    <span class="slds-assistive-text">Loading</span>
                                    <div class="slds-spinner__dot-a"></div>
                                    <div class="slds-spinner__dot-b"></div>
                                </div>
                            </div>
                        </aura:if>
                    </div>
                    <aura:set attribute="else">
                        <c:GSM_CallToAction_Create_Lead genericRecordID = "{!v.recordId}" recordId = "{!v.recordId}" />
                    </aura:set>
                </aura:if>
                <aura:if isTrue="{!v.showC2AFields}">
                    <lightning:recordViewForm recordId="{!v.c2aRecordId}" objectApiName="Lead">
                        <article class="slds-card">
                            <div class="slds-card__header slds-grid">
                                <header class="slds-media slds-media_center slds-has-flexi-truncate">
                                    <div class="slds-media">
                                        <div class="slds-media__figure">
                                            <lightning:icon iconName="standard:lead" size="small" alternativeText="Lead" />
                                        </div>
                                        <div class="slds-media__body">
                                            <h1 class="slds-page-header__title slds-text-heading_small slds-align-middle slds-truncate" title="Lead">C2A Lead</h1>
                                            <br/>
                                        </div>
                                    </div>
                                </header>
                            </div>
                            <div class="slds-card__body slds-card__body_inner">
                                <lightning:outputField fieldName="Name" />
                                <lightning:outputField fieldName="Email" />
                                <lightning:outputField fieldName="Phone" />
                                <lightning:outputField fieldName="Title" />
                                <label style="margin-left:1%; margin-bottom:1%;" class="slds-form-element__label">Lead Owner</label>
                                <div style="margin-left:1%; margin-bottom:1%;" class="slds-form-element__control">
                                    <lightning:outputField fieldName="OwnerId" variant="label-hidden"/> 
                                </div>
                                <lightning:outputField fieldName="Status"/>
                                <lightning:outputField fieldName="Company" />
                            </div>
                        </article>
                    </lightning:recordViewForm>
                </aura:if>
            </div>
        </div>
    </div>
</aura:component>