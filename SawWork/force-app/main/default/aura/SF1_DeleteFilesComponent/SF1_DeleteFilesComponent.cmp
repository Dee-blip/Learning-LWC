<aura:component controller="SF1_DeleteFiles"  implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickActionWithoutHeader" access="global" >    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <lightning:flow aura:id="flowId" />
    <aura:attribute name="cdList" type="ContentDocument[]"/>
    <aura:attribute name="columnsName" type="List"/>
    <aura:attribute name="isSpinner" type="boolean" default="false"/>
    <aura:attribute name="showConfirmDialog" type="boolean" default="false"/>
    <aura:attribute name="isRowSelected" type="boolean" default="true"/>
    
    <!--Modal Header-->  
    <div class="modal-header slds-modal__header slds-size_1-of-1">
        <h3 class="title slds-text-heading--medium"><b>Select the files to delete!</b></h3>
    </div>
    <!--End Modal Header-->  
    
    <div class="slds-scrollable">
        <div>
            <aura:if isTrue="{!v.isSpinner}">
            <lightning:spinner alternativeText="Loading" size="medium" />
            </aura:if>
        </div>
        <div class="slds-box" style="height:300px">
            <lightning:datatable data="{!v.cdList }"
                         columns="{!v.columnsName}"
                         keyField="id"
                         hideCheckboxColumn="false"
                         onrowselection = "{!c.updateIsRowSelected}"
                         aura:id="linesTable"/>  
        
        </div>
        
    </div>
        <footer>
            <div class="modal-footer slds-modal__footer slds-size_1-of-1" >
                <lightning:button label="Delete" iconName="utility:delete" iconPosition="left"  variant="destructive" onclick = "{!c.deleteFiles}" disabled = "{!v.isRowSelected}" />
                <lightning:button label="Cancel" title="Neutral action" variant="brand"  onclick="{!c.cancel}"/>
            </div>
        </footer>

    
</aura:component>