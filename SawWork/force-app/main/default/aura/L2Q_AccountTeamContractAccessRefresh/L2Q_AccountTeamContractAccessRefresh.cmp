  <aura:attribute name="genericRecordID" type="Id" />
  <aura:attribute name="failureMessage" type="String"/>


    <div class="slds-m-around_xx-large,slds-float_left">
          
        <!--lightning:layout verticalAlign="end" class="slds-form slds-form_horizontal">
            <lightning:layoutitem padding="around-small" size="8" flexibility="auto"-->
            <ui:message title="Message" severity="warning"  >
                        Are you sure you want to refresh Contract Access for Account and Opportunity Team ?
          </ui:message>
                    <lightning:button label="Yes" variant="brand" onclick="{!c.handleClick}"/>
  
                <div class="slds-box slds-theme_shade slds-theme_alert-texture slds-hide" 
                         style="color:green;" aura:id="SuccessId">
                        <p><strong>{!v.failureMessage} </strong>
                            </p>
              </div>
        
        
            <lightning:spinner aura:id="mySpinner" alternativeText="Processing.." title="Processing.." variant="brand" size="large" class="slds-hide"/>
    </div>
    </aura:component>