<aura:component controller="PartnerCommunityFCMController" 
                extends="c:PartnerCommunityParentComponent" 
                implements="flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
                access="global">
    
    <aura:attribute name="recordId" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="objectList" type="List"/>
    <aura:attribute name="selectedValue" type="String" />
    <aura:attribute name="isProgressing" type="Boolean" default="false"/>
    <aura:attribute name="progress" type="Integer" default="0"/>
    <aura:registerEvent name="parentUpdateEvent" type="c:PartnerCommunityParentUpdateEvent"/>
    
    <aura:if isTrue="{!v.isProgressing}">
        <div>
            <lightning:progressBar value="{!v.progress }" />
        </div>
    </aura:if>
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <p>Please select an Akamai Partner Account Executive (PAE):</p>
                </div>
            </header>
        </div>
        <div class="slds-card__body">
            <lightning:radioGroup
                                  aura:id="mygroup"
                                  name="radioButtonGroup"
                                  options="{! v.objectList }"
                                  value="{! v.selectedValue }"
                                  onchange="{! c.handleChange }"/>
            <div class="slds-p-top_x-large slds-align_absolute-center">
                <lightning:button  aura:id="submit" label="Submit" title="Submit" onclick="{!c.updateRecordJS}" />
            </div>
        </div>
    </article>
</aura:component>