<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,force:hasRecordId" access="global" >
    <aura:attribute name="incidentIds" type="List"/>
    <aura:attribute name="incidentData" type="List"/>
    <aura:attribute name="success" type="List"/>
    <aura:attribute name="failure" type="List"/>
	<aura:attribute name="componentName" type="String"/>
	<aura:attribute name="incMap" type="List"/> 
	<aura:attribute name="label" type="String"/>
    <aura:attribute name="actionName" type="String" />
    <aura:attribute name="idleTime" type="Integer" default="0"/>
    <aura:attribute name="startTime" type="DateTime" />
    <aura:handler name="change" value="{!v.startTime}" action="{!c.clearIdleTime}"/>
	<aura:registerEvent name="HD_ActionAuditEvent" type="c:HD_ActionAuditEvent"/>    

    <c:HD_ActionAudit startTime="{!v.startTime}" actionName="{!v.actionName}" idleTime="{!v.idleTime}"/>
    <aura:method name="actionMethod" action="{!c.myAction}" access="PUBLIC"> 
    </aura:method>
    
    <aura:handler name="HD_ShowBulkUpdateResultsEvt" event="c:HD_ShowBulkUpdateResultsEvt"
                  action="{!c.handleShowBulkUpdateResultsEvt}"/>
   	<aura:registerEvent name="HD_RefreshEvent" type="c:HD_RefreshEvent"/>

    
    <div aria-hidden="false" role="dialog" class="slds-backdrop slds-modal slds-fade-in-open custom-hide-modal slds-hide" aura:id="selectedTicketsModal">
        
        <div class="slds-modal__container custom-modal-body slds-clearfix" >
            <div class="slds-modal__header slds-clearfix">
                <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeSelectedTicketsModal}">
                    <lightning:icon iconName="utility:close" />
                </button>
                <h2 aura:id="headerId" class="slds-text-heading--medium">
                    {!v.incidentIds.length} tickets selected.
                </h2>
                <span class="slds-float_right" style = "color:rgb(112, 110, 107);">
                	1 of 3
                </span>
            </div>
            
            
            <div class="modal-body scrollable slds-modal__content slds-p-around--medium">
                
                <ul class="slds-listbox slds-listbox_vertical slds-dropdown_length-10" role="group">
                    <aura:iteration items="{!v.incidentData}" var="incident" indexVar="idx">
                        <a target="_blank" style="text-decoration:none" href="{!'/lightning/r/BMCServiceDesk__Incident__c/'+ incident.Id + '/view'}">
                        <li role="presentation" class="slds-listbox__item" >
                            <div  class="slds-media slds-listbox__option slds-listbox__option_entity slds-listbox__option_has-meta" role="option" tabindex="0">
                                <span class="slds-media__figure">
                                    <span class="slds-icon_container slds-icon-standard-account" title="Incident">
                                                    <lightning:icon iconName="standard:news "/>

                                    </span>
                                </span>
                                <span class="slds-media__body">
                                    <span class="slds-listbox__option-text slds-listbox__option-text_entity">{!((equals(incident.BMCServiceDesk__Type__c,'Incident'))?'IN':'SR')+incident.Name}</span>
                                    <span class="slds-listbox__option-meta slds-listbox__option-meta_entity">{!incident.BMCServiceDesk__Client_Name__c} • {!incident.BMCServiceDesk__Category_ID__c} • {!incident.HD_Owner_user_queue__c}</span>
                                </span>
                            </div>
                        </li>
                    	</a>
                    </aura:iteration>
                    
                </ul>
               
            </div>
            <div class="slds-modal__footer" >
                <div class="slds-button-group" role="group">
                    <ui:button class="slds-button slds-button--neutral" label="Next" aura:id="next" press="{!c.showAction}"></ui:button>
                    <button class="slds-button slds-button--neutral" aura:id = "Cancel" onclick="{!c.closeSelectedTicketsModal}">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    
    <div aria-hidden="false"  role="dialog" class="slds-backdrop slds-modal slds-fade-in-open custom-hide-modal slds-hide" aura:id="bulkUpdateModal">
        
        <div class="slds-modal__container custom-modal-body slds-clearfix" >
            <div class="slds-modal__header slds-clearfix">
                <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeWindow}">
                    <lightning:icon iconName="utility:close" />
                </button>
                <h2 aura:id="headerId" class="slds-text-heading--medium">
                    {!v.label}
                </h2>
                <span class="slds-float_right" style = "color:rgb(112, 110, 107);">
                	2 of 3
                </span>
 
            </div>
            
            
            <div class="modal-body scrollable slds-modal__content slds-p-around--medium">
                {!v.body}
            </div>
            
        </div>
    </div>
    
    
    
    
        <div aria-hidden="false" role="dialog" class="slds-backdrop slds-modal slds-fade-in-open custom-hide-modal slds-hide" aura:id="resultModal">
        
            
            
        <div class="slds-modal__container custom-modal-body slds-clearfix" >
            
            <div class="slds-modal__header slds-clearfix">
                <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeresultModal}">
                    <lightning:icon iconName="utility:close" />
                </button>
                <span class="slds-float_right" style = "color:rgb(112, 110, 107);">
                	3 of 3
                </span>
                
            </div>
            
            <div class="modal-body scrollable slds-modal__content slds-p-around--medium">
             <header >
                <h2 class="slds-section-title--divider slds-text-align_center">
                    <lightning:icon iconName="action:approval " size="x-small"/>
                    <span class="slds-text-align_center slds-text-heading_small">&nbsp; successes({!v.success.length})</span>
                </h2>
            </header>
                <ul class="slds-listbox slds-listbox_vertical slds-dropdown_length-10" role="group" aria-label="My Favorites">
                    <aura:iteration items="{!v.success}" var="s" indexVar="idx">
                        
                                      <a target="_blank" style="text-decoration:none" href="{!'/lightning/r/BMCServiceDesk__Incident__c/'+ s.Id + '/view'}">

                        <li role="presentation" class="slds-listbox__item" >
                            <div id="listbox-option-id-1" class="slds-media slds-listbox__option slds-listbox__option_entity slds-listbox__option_has-meta" role="option" tabindex="0">
                                <span class="slds-media__figure">
                                    <span class="slds-icon_container slds-icon-standard-account" title="Incident">
                                                    <lightning:icon iconName="standard:news "/>

                                    </span>
                                </span>
                                <span class="slds-media__body">
                                    <span class="slds-listbox__option-text slds-listbox__option-text_entity">{!((equals(s.BMCServiceDesk__Type__c,'Incident'))?'IN':'SR')+s.Name}</span>
                                    <span class="slds-listbox__option-meta slds-listbox__option-meta_entity">{!s.BMCServiceDesk__Client_Name__c} • {!s.BMCServiceDesk__Category_ID__c} • {!s.HD_Owner_user_queue__c}</span>
                                </span>
                            </div>
                        </li>
                        </a>
                    </aura:iteration>
                    
                </ul>

                
                
                
                <header >
                  
                <h2 class="slds-section-title--divider slds-text-align_center">
                  <lightning:icon iconName="action:close" size="x-small"/>
                    <span class="slds-text-align_center slds-text-heading_small">&nbsp; Failures({!v.failure.length})</span>
                </h2>
            </header>
                <ul class="slds-listbox slds-listbox_vertical slds-dropdown_length-10" role="group" >
                    <aura:iteration items="{!v.failure}" var="f" indexVar="idx">
                        
                                      <a target="_blank" style="text-decoration:none" href="{!'/lightning/r/BMCServiceDesk__Incident__c/'+ f[0].Id + '/view'}">

                        <li role="presentation" class="slds-listbox__item">
                            <div id="listbox-option-id-1" class="slds-media slds-listbox__option slds-listbox__option_entity slds-listbox__option_has-meta" role="option" tabindex="0">
                                <span class="slds-media__figure">
                                    <span class="slds-icon_container slds-icon-standard-account" title="Incident">
                                                    <lightning:icon iconName="standard:news"/>
                                    </span>
                                </span>
                                <span class="slds-media__body">
						<span class="slds-listbox__option-text slds-listbox__option-text_entity">{!((equals(f[0].BMCServiceDesk__Type__c,'Incident'))?'IN':'SR')+f[0].Name}</span>
									<span class="slds-listbox__option-text slds-listbox__option-text_entity">{!f[0].BMCServiceDesk__Client_Name__c} • {!f[0].BMCServiceDesk__Category_ID__c} • {!f[0].HD_Owner_user_queue__c}</span>
									<span style = "color:red;" class="slds-listbox__option-meta slds-listbox__option-meta_entity">{!f[1]}</span>

                                </span>
                            </div>
                        </li>
                        </a>               
                    </aura:iteration>
                    
                </ul>

                
            </div>
            
        </div>
    </div>
    
</aura:component>