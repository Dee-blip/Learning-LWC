              <span class="sr-header">SR Input Details ~ {!v.srInfoMap.BMCServiceDesk__FKRequestDefinition__r.BMCServiceDesk__serviceRequestTitle__c}</span><span aura:id="ar_sr_edit_link"  id='sr_edit_link' class="sr_link"> <a href='' onclick="{!c.edit_sr}">Edit Details</a></span>


   </section>

    <section class=" slds-popover index-fix slds-size--2-of-2" role="dialog" aria-describedby="dialog-body-id-43">

        <div class="slds-grid slds-wrap">
        <aura:if isTrue="{!v.displayInSecondColumn != true}" >

         <aura:iteration items="{!v.srdetails}" var="item">

             <aura:if isTrue="{!item[2] == 'Header Section'}">

                    <aura:if isTrue="{!item[3] !=0}">
                        <div class=" padding-bottonm-top  slds-p-horizontal--small slds-p-around--small slds-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-large-size--1-of-1 " >
                            <hr></hr>
                            <div class=" slds-text-heading--small "><pre class="printClass"><b>{!item[0]} </b></pre></div>
                        </div>
                    </aura:if>
                    <aura:if isTrue="{!item[3] ==0}">
                        <div class=" padding-bottonm-top custom-bkcolor-coral slds-p-horizontal--small slds-p-around--small slds-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-large-size--1-of-1 " >
                            <div class=" slds-text-heading--small"><pre class="printClass"><b>{!item[0]}</b></pre></div>
                        </div>
                    </aura:if>
                </aura:if>
              <aura:if isTrue="{!item[2] != 'Header Section'}">
                    <div class="slds-p-horizontal--small slds-p-around--small slds-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-large-size--1-of-1 " >

                          <aura:if isTrue="{!item[1] == 'Data is encrypted'}">
