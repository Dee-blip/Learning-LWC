                                      </section>
                                    </div>
                                  </aura:if>

                                </pre>
                                  <pre class="one-em-top"> {!item[1]}</pre></div>
                          </aura:if>


                    </div>
                </aura:if>

          </aura:iteration>
      	</aura:if>
        <aura:if isTrue="{!v.displayInSecondColumn == true}">

        	<aura:iteration items="{!v.srdetails}" var="item">
