<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,force:hasRecordId"  controller="HD_Request_Detail_Input_Lightning">
	<aura:handler name="init" action="{!c.doInit}" value="{!this}" />
    <aura:attribute name="recordId" type="Id" default="a5UR0000000EG34MAG"/>
    <aura:attribute name="srinformation" type="Map"/>
