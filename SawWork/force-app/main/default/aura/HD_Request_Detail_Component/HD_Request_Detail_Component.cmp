    <aura:attribute name="srInfoMap" type="Map"/>
    <aura:attribute name="srdetails" type="List"/>
    <aura:attribute name="placeholder" default="true" type="Boolean"/>
     <aura:attribute name="displayInSecondColumn" type="Boolean"/>
    <aura:attribute name="forPrint" type="Boolean" default="false"/>

    <aura:attribute name="sredit_mode" default="false" type="Boolean"/>
    <aura:attribute name="srdt_mode" default="true" type="Boolean"/>
    <aura:handler event="c:Update_SR_Edit" action="{!c.updateEditForm}" />


    <div>
    <aura:renderIf isTrue="{!v.placeholder}">
         <c:HD_Placeholder_service holderType="clientdetail" />
        <c:HD_Placeholder_service holderType="clientdetail" />
        <c:HD_Placeholder_service holderType="clientdetail"/>
        <c:HD_Placeholder_service holderType="clientdetail"/>



    </aura:renderIf>
        <aura:if isTrue="{!v.forPrint == false}">
        <!--<c:HD_Incident_Client_Detail recordId="{!v.recordId}"/>-->
        </aura:if>
         <lightning:spinner aura:id="mySpinner_head" />
  <aura:renderIf isTrue="{!v.srdt_mode}">
