                                  <aura:if isTrue="{! and(item[4]!=null,item[4] !='')}" >
                                    <span class="infoIcon" >
                                      <lightning:icon iconName="utility:info"  size="xx-small"/>
                                    </span>
                                    <div class="tooltip">
                                      <section class="slds-popover " role="dialog" aria-label="Dialog Title" aria-describedby="dialog-body-id-2">
                                        <div class="slds-popover__body" id="dialog-body-id-2">
                                          <p>{!item[4]}</p>
                                        </div>
                                      </section>
                                    </div>
                                  </aura:if>
                                </pre>
                                <pre class="one-em-top"> {!item[1]}</pre>
                              </div>
                          </aura:if>


                    </div>
                    <div class="slds-p-horizontal--small slds-p-around--small slds-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-large-size--1-of-2 " >

                       	<aura:if isTrue="{!item[5] != null}">
                              <aura:if isTrue="{!item[5] == 'Data is encrypted'}">
                                  <div class=""><pre class="heading-color"><b>{!item[5]}</b> </pre>
                                      <pre><span style="color:red" class="one-em-top">{!item[6]}</span></pre></div>
                              </aura:if>
                              <aura:if isTrue="{!item[5] != 'Data is encrypted'}">
                                  <div class=""><pre class="heading-color"><b>{!item[5]}</b>
                                    <aura:if isTrue="{! and(item[9]!=null,item[9] !='')}" >
                                    <span class="infoIcon" >
                                      <lightning:icon iconName="utility:info"  size="xx-small"/>
                                    </span>
                                    <div class="tooltip">
                                      <section class="slds-popover " role="dialog" aria-label="Dialog Title" aria-describedby="dialog-body-id-2">
                                        <div class="slds-popover__body" id="dialog-body-id-2">
                                          <p>{!item[9]}</p>
                                        </div>
                                      </section>
                                    </div>
                                  </aura:if>

                                    </pre>


                                    <pre class="one-em-top"> {!item[6]}</pre></div>
                              </aura:if>
                        </aura:if>


                    </div>
                </aura:if>
                <aura:if isTrue="{!item[2] == 'Header Section'}">
                    <aura:if isTrue="{!item[3] !=0}">

                        <div class=" padding-bottonm-top  slds-p-horizontal--small slds-p-around--small slds-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-large-size--1-of-1 " >
                            <hr></hr>
                            <div class=" slds-text-heading--large "><pre class="printClass"><b>{!item[0]}</b></pre></div>
                        </div>
                    </aura:if>
                    <aura:if isTrue="{!item[3] ==0}">
                        <div class=" padding-bottonm-top custom-bkcolor-coral slds-p-horizontal--small slds-p-around--small slds-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-large-size--1-of-1 " >
                            <div class=" slds-text-heading--small"><pre class="printClass"><b>{!item[0]}</b></pre></div>
                        </div>
                    </aura:if>
                </aura:if>



          </aura:iteration>
        </aura:if>
    </div>
    </section>
    </div>
    </aura:renderIf>

     <aura:If isTrue="{!v.sredit_mode}">
    <div  id='service_request_form' >

        <section id="sectionid_edit" class="slds-popover slds-size--2-of-2" role="dialog" aria-describedby="dialog-body-id-43" style="background-color:#FAFAF9;padding: .75rem 1rem; ">
