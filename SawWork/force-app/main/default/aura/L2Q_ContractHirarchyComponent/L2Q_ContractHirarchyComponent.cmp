<aura:component controller="ContractHierarchyClass">
    <aura:attribute name="contractId" type="String" />
    <aura:attribute name="listOfHirarchyItems" type="List" />
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    <c:SF1_CustomLoader positionFromTopInPercent="40%" />
    <lightning:card iconName="standard:contract">
        <aura:set attribute="title">
            <strong>
                Contract Hierarchy
            </strong>
        </aura:set>
        <aura:set attribute="actions">
            <lightning:buttonIcon iconName="utility:back" onclick="{! c.backToContract }" size="large"
                alternativeText="Back" />
        </aura:set>
        <div class="minimumPadding">
            <div class="slds-scrollable_x">

                <table class="slds-table slds-table_cell-buffer slds-table_bordered">
                    <thead>
                        <tr class="slds-line-height_reset">
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Hierarchy</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Contract ID</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Type</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Account</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Effective Start Date</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Effective End Date</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Paper Type</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Paper Version</div>
                            </th>
                            <th class="" scope="col">
                                <div class="slds-truncate" title="Step Name">Paper Version #</div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <aura:iteration items="{! v.listOfHirarchyItems }" var="eachHirarchyItem">
                            <tr class="slds-hint-parent">

                                <td data-label="Step Name">
                                    <div class="slds-wrap">
                                        <a style="text-decoration:none" href="{! '/' + eachHirarchyItem.sfID }">
                                            <lightning:formattedRichText value="{! eachHirarchyItem.itemValue }" />
                                        </a>
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.contractID }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.contractID }" />
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.contractType }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.contractType }" />
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.accountName }">
                                        <a href="{! '/' + eachHirarchyItem.accountId }">
                                            <lightning:formattedRichText value="{! eachHirarchyItem.accountName }" />
                                        </a>
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.startDate }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.startDate }" />
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.endDate }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.endDate }" />
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.partnerType }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.partnerType }" />
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.paperType }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.paperType }" />
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.paperVersion }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.paperVersion }" />
                                    </div>
                                </td>
                                <td data-label="Step Name">
                                    <div class="slds-wrap" title="{! eachHirarchyItem.paperVersionNo }">
                                        <lightning:formattedRichText value="{! eachHirarchyItem.paperVersionNo }" />
                                    </div>
                                </td>
                            </tr>
                        </aura:iteration>
                    </tbody>
                </table>

            </div>
        </div>


    </lightning:card>
</aura:component>