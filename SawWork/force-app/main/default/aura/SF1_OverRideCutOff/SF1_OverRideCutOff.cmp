<aura:component controller="SF1_AccountReassignment" implements="force:hasRecordId,force:lightningQuickAction" access="global">
  <aura:attribute name="recordId" type="Id"/>

  <aura:attribute name="errorOccured" type="Boolean" default="false"/>
  <aura:attribute name="successful" type="Boolean" default="false"/>
  <aura:attribute name="returnMessage" type="String"/>

  <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

  <c:SF1_CustomLoader />

  <ui:scrollerWrapper class="scrollerSize">

    <ul class="slds-has-dividers_around-space ">

      <li>
        &nbsp;
      </li>

      <aura:if isTrue="{! v.errorOccured }">
        <!-- error message when refresh isn't successful -->
        <div>
          <ui:message title="Error" severity="error" closable="false">
            {! v.returnMessage }
            <br/><br/>
            Click Cancel to go back to Account Reassignment Request.
          </ui:message>
        </div>
      </aura:if>

      <aura:if isTrue="{! v.successful }">
        <!-- success message when refresh successful -->
        <div>
          <ui:message title="Confirmation" severity="confirm" closable="false">
            {! v.returnMessage }
            <br/><br/>
            Click Cancel to go back to Account Reassignment Request.
          </ui:message>
        </div>
      </aura:if>

      <li>
        &nbsp;
      </li>

    </ul>

  </ui:scrollerWrapper>

  <!-- <footer class="slds-docked-composer__footer slds-shrink-none">
    <button type="button" class="slds-button slds-button_neutral" onclick="{!c.back}">Back</button>
  </footer> -->

</aura:component>