  <!--  <aura:registerEvent name="refreshEvent" type="c:RefreshParent_Event" /> -->
     <aura:registerEvent name="refreshEvent" type="c:RefreshParent_Event" />
        
    <aura:attribute name="recIds" type="String[]"  />
    <aura:attribute name="recTypeId" type="Id" />
    <aura:attribute name="showComp" type="Boolean" default="false" />
    <aura:attribute name="spinner" type="boolean" default="FALSE"/>
    
    
    <aura:if isTrue="{!v.recTypeId}">
        <c:scAMGCaseClosureLightningRecordPage  lCaseId="{!v.recIds}" recTypeAMG="{!v.recTypeId}" oncloseTab="{!c.closeCaseModal}" onrefreshData="{!c.refreshMyOpenCasesTable}" /> 
