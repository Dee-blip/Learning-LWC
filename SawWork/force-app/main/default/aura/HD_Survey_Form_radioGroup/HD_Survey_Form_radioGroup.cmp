<aura:component >
    <aura:attribute name="value" type="String"/>
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="order" type="String"/>
    <aura:attribute name="options" type="Map[]" default='[
                                                         {label: "Yes", value: "yes"},
                                                         {label: "No", value: "no"}
                                                         ]'/>
    <lightning:radioGroup name="{!'radioGroup'+v.order}"
                          label="{!v.title}"
                          options="{! v.options }"
                          value="{! v.value }"
                          type="radio"/>
</aura:component>