<aura:component controller="IR_NewDraftInvoiceController" implements="lightning:isUrlAddressable"  access="global">
	<aura:attribute name="showSpinner" type="Boolean" default="false"/>

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <aura:handler name="change" value="{!v.pageReference}" action="{!c.onInit}" />

    <span class="{!v.showSpinner ? 'slds-show' : 'slds-hide'}">
        <lightning:spinner/>
    </span>
</aura:component>