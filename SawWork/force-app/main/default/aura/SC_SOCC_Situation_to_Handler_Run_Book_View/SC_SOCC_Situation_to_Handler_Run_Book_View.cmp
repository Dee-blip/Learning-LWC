<aura:component controller="SC_SOCC_RUN_BOOK" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">
    
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="ExistingSHMap" type="Object"/>
    <aura:attribute name="HandlerId" type="String"/>
    <aura:attribute name="activeSections" type="List" default="[]" />
    <aura:attribute name="activeSectionsOpenned" type="String" />
    <aura:attribute name="displayHandler" type="Boolean" default="false"/>
    <aura:attribute name="displayMasterEdit" type="Boolean" default="true"/>
    <aura:attribute name="displayMasterEditOption" type="Boolean" default="false"/>
    <aura:attribute name="confirmMasterEdit" type="Boolean" default="false"/>
    <aura:attribute name="vfURL" type="String"/>
    <aura:attribute name="handlerIdList" type="List"/>
    <aura:attribute name="fieldsToShow" type="List"/>
    <aura:attribute name="isPDUnAvailable" type="boolean"/>
    <aura:attribute name="displayInstruction" type="boolean" default="false"/>
    
    <!-- attributes that will be passed to child from Parent -->
    <aura:attribute name="HandlerDetails" type="Object"/>
    <aura:attribute name="EscalationContactList" type="Object"/>
    
    <!-- lightning Navigation Service -->
    <lightning:navigation aura:id="navService"/>
    
    <!-- Attributes to Store Search Term & Filtered Data -->
    <aura:attribute name="lFilteredSHMap" type="Object"/>
    <aura:attribute name="searchTerm" type="String"/>
    <aura:attribute name="searchTermInstruction" type="String"/>
    
    <!-- Attribute to store no of policy domain on Handlers -->
    <aura:attribute name="noofhandlers" type="Integer" default="0"/>
    
    <!-- Attribute for Modal Open/Close for Situation Handler Mappings -->
    <aura:attribute name="isModalOpen" type="boolean" default="false"/>
    <aura:attribute name="spinner" type="boolean" default="false"/>
    
    <!--handlers-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <aura:method name="parentMethod" description="Method which gets called from child">
        <aura:attribute name="isSuccess" type="Boolean" default="false"/>              
    </aura:method>
    
    <!-- Event Handler -->
    <aura:handler event="c:shmaprefresh" action="{!c.doInit}"/>
    <!--<aura:registerEvent name="vfEvent" type="c:SC_SOCC_Runbookevent"/>-->
        
    <aura:if isTrue="{!v.isPDUnAvailable}">
        <div style="color: red;text-align: center;font-size: 1.3rem;">
            {!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_RunbookDoesNotExist}
            <!--Runbook does not exist.-->
        </div>
        <aura:set attribute="else">
            <aura:if isTrue="{!v.confirmMasterEdit}">
                <div class="slds-m-around_large">
                    <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                        <div class="slds-modal__container">
                            <!-- Modal/Popup Box Header Starts here-->
                            <header class="slds-modal__header">
                                <lightning:buttonIcon iconName="utility:close"
                                                      onclick="{!c.closeConfirmation}"
                                                      alternativeText="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ModalCloseAltText}"
                                                      variant="bare-inverse"
                                                      class="slds-modal__close"/>
                                <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ModalHeadingConfirmEdit}<!--Confirm--></h2>
                            </header>
                            <!--Modal/Popup Box Body Starts here-->
                            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                                <center>{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ModalBodyConfirmEdit}<!--Are you sure you want to submit the suggestions?--></center>
                            </div>
                            <!--Modal/Popup Box Footer Starts here-->
                            <footer class="slds-modal__footer">
                                <lightning:button class="slds-button slds-button_neutral masterEditCls" label="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ModalFooterSubmitButton}" onclick="{!c.updateHandlers}"/>
                                <lightning:button class="slds-button slds-button_neutral masterEditCls" label="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ModalFooterCancelButton}" onclick="{!c.closeConfirmation}"/>
                            </footer>
                        </div>
                    </section>
                    <div class="slds-backdrop slds-backdrop_open"></div>
                </div>
            </aura:if>
            
            <aura:if isTrue="{!v.spinner}">
                <div class="slds-m-around_large">
                    <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                        <div class="slds-modal__container">
                            
                            <!--Modal/Popup Box Body Starts here-->
                            <!--<div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">-->
                            <aura:if isTrue="{!v.spinner}">
                                <lightning:spinner variant="brand"  size="large" />
                            </aura:if>
                            <!--</div>-->
                            
                        </div>
                    </section>
                    <div class="slds-backdrop slds-backdrop_open"></div>
                </div>
            </aura:if>

            <div class="slds-box_border">
                <div id="mainDivId" aura:id="auraMainDivId">
                    <lightning:recordViewForm recordId="{!v.recordId}" 
                                              objectApiName="Policy_Domain__c">
                        <div class="slds-grid">
                            <div class="slds-col slds-size_2-of-3 slds-text-font_monospace slds-text-heading_medium " style="padding-left: 3%; padding-top: 2%;">
                                <b>{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_Runbook}<!--Runbook--></b>
                            </div>
                            
                            <div class="slds-col slds-size_1-of-3" style="float: right;padding-top: 16px;padding-left: 10%;" id="printId">
                                
                                <div class="slds-button-group" role="group">
                                    <button onclick="{!c.printPage}" class="slds-button slds-button_icon slds-button_icon-border-filled" title="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_PrintButtonAltText}" aria-pressed="false" style="border-color: #2d2d2d26;">
                                        <lightning:icon size="x-small" class="printCls" iconName="utility:print" variant="container" alternativeText="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_PrintButtonAltText}" /> 
                                        <span class="slds-assistive-text">{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_PrintButtonAltText}<!--Print--></span>
                                    </button>
                                    <button onclick="{!c.PDFPage}" class="slds-button slds-button_icon slds-button_icon-border-filled" title="PDF" aria-pressed="false" style="border-color: #2d2d2d26;">
                                        <lightning:icon size="x-small" class="printCls" iconName="utility:page" variant="container" alternativeText="PDF" />
                                        <span class="slds-assistive-text">PDF</span>
                                    </button>
                                </div>
                                
                                <aura:if isTrue="{!v.displayMasterEditOption}">
                                    <aura:if isTrue="{!v.displayMasterEdit}">
                                        <lightning:button class="slds-button slds-button_neutral masterEditCls" label="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_SuggestAnEditButton}" onclick="{!c.editHandlers}"/>
                                    </aura:if>
                                    <aura:if isTrue="{!!v.displayMasterEdit}">
                                        <lightning:button class="slds-button slds-button_neutral masterEditCls" label="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ModalFooterSubmitButton}" onclick="{!c.openConfirmation}"/>
                                        <lightning:button class="slds-button slds-button_neutral masterEditCls" label="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ModalFooterCancelButton}" onclick="{!c.cancelUpdateHandlers}"/>
                                    </aura:if>
                                </aura:if>
                                <!--<lightning:buttonIcon class="printCls" iconName="doctype:pdf" variant="container" onclick="{! c.printPage }" alternativeText="Print" />-->
                                <!--<lightning:icon class="printCls" iconName="doctype:image" alternativeText="PDF" />-->
                            </div>
                        </div>
                        
                        <div class="slds-grid">
                            <div class="slds-col slds-size_2-of-3" style="padding-left: 4%;padding-top: 2%;">
                                <lightning:outputField fieldName="Name" class="" style="font-size: 1rem !important"/>
                                <lightning:outputField fieldName="Product__c" class="" style="font-size: 1rem !important;"/>
                                <lightning:outputField fieldName="Additional_Product__c" class="" style="font-size: 1rem !important;" />
                            </div>
                        </div>
                    </lightning:recordViewForm>
                </div>
                <!-- Div Showing Search and Buttons-->
                <aura:if isTrue="{!v.displayHandler}">
                    <div style = "padding-top: 1% !important;">
                        <div class="slds-text-font_monospace slds-text-heading_medium" style="padding-left: 3%; padding-top: 2%;">
                            <b>{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_SituationAndHandlersHeading}<!--Situation and Handlers--></b>
                        </div>
                        <div class="slds-grid" style = "padding-left: 3% !important;" id="searchId" aura:id="searchAuraId">
                            <div class="slds-col slds-size--1-of-3">
                                <lightning:input type="search" value="{!v.searchTerm}" onchange="{!c.dofilter}" placeholder="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_SearchSituationPlaceholder}"/>
                            </div>
                            <div class="slds-col slds-size--1-of-2 slds-align--bottom" style="margin-top:1.6%;padding-left: 2%;">
                                <lightning:button label="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ExpandAllButton}" onclick="{!c.expandAll}" variant="base"/> |
                                <lightning:button label="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_CollapseAllButton}" onclick="{!c.collapseAll}" variant="base"/>
                            </div>
                        </div>
                    </div>
                    <!-- Div Showing Search and Buttons Ends-->
                    
                    
                    <div style="padding: 3%;">
                        <!-- Accordion Section -->
                        <div style="border-style: groove;">
                            <lightning:accordion aura:id="accordion" allowMultipleSectionsOpen="true" activeSectionName="{!v.activeSections}" class="slds-box">
                                <aura:iteration items="{!v.lFilteredSHMap}" var="varSHMap">
                                    <lightning:accordionSection aura:id="accsection" name="{!varSHMap.SHMap.Id}" label="{!(join(' for ', '['+varSHMap.SHMap.Handler__r.Name+']','['+varSHMap.SituationNameList +']'))}">
                                        <div class="slds-theme_shade">
                                            <c:HandlerDetail aura:id="handlerCmpId" shMapId = "{!varSHMap.SHMap.Id}" handlerRecId="{!varSHMap.SHMap.Handler__c}" pdId="{!v.recordId}" HandlerDetails="{!varSHMap.Handler}" EscalationContactList="{!varSHMap.EscalationContact}" escalationContactId="{!varSHMap.Handler.Escalation_List__c}" fieldsToShowList="{!v.fieldsToShow}" parent="{! this }"/>
                                        </div>
                                    </lightning:accordionSection>
                                    
                                </aura:iteration>
                            </lightning:accordion>
                        </div>
                        <!-- Accordion Section Ends -->
                    </div>
                </aura:if>

                <aura:if isTrue="{!v.displayInstruction}">
                    <div style = "padding-top: 1% !important;">
                        <div class="slds-text-font_monospace slds-text-heading_medium" style="padding-left: 3%; padding-top: 0%;">
                            <b>{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_ChangeRequestHistoryHeading}<!--Change Request History--></b>
                        </div>
                        <div class="slds-grid" style = "padding-left: 3% !important;" id="searchId" aura:id="searchAuraId">
                            <div class="slds-col slds-size--1-of-3">
                                <lightning:input type="search" value="{!v.searchTermInstruction}" onchange="{!c.dofilterInstruction}" placeholder="{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_SearchInstructionsPlaceholder}"/>
                            </div>
                            <!--<div class="slds-col slds-size-1-of-2 slds-align-bottom" style="margin-top:1.6%;padding-left: 2%;">
                                <lightning:button label="Expand All" onclick="{!c.expandAllInstructions}" variant="base"/> |
                                <lightning:button label="Collapse All" onclick="{!c.collapseAllInstructions}" variant="base"/>
                            </div>-->
                        </div>
                    </div>
                    <!-- Div Showing Search and Buttons Ends-->
                    <div style="padding: 3%;padding-top: 1%;">
                        <!-- Accordion Section -->
                        <div style="border-style: groove;">
                            <c:scSoccCommunityRunbookInstructions aura:id="childInstructions" />
                        </div>
                        <!-- Accordion Section Ends -->
                    </div>
                </aura:if>

            </div>
            <aura:if isTrue="{!v.isModalOpen}">
                <iframe src="{!v.vfURL}" width="0px" height="0px;" frameBorder="0"/>
            </aura:if>
            <aura:if isTrue="{!v.isModalOpen}">
                <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                    <div class="slds-modal__container">
                        <header class="slds-modal__header">
                            <lightning:buttonIcon iconName="utility:close"
                                                  onclick="{! c.closeModel }"
                                                  alternativeText="close"
                                                  variant="bare-inverse"
                                                  class="slds-modal__close"/>
                            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_GeneratingModalHeading}<!--Generating--></h2>
                        </header>
                        <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                            <center>{!$Label.c.Jarvis_SC_SOCC_Situation_to_Handler_Run_Book_View_GeneratingModalBodyText}<!--Please wait while we process..--></center>
                            <!--<iframe src="{!v.vfURL}" width="100%" height="0px;" frameBorder="0"/>-->
                        </div>
                        <footer class="slds-modal__footer">
                            <lightning:button variant="neutral"
                                              label="Cancel"
                                              title="Cancel"
                                              onclick="{! c.closeModel }"/>
                        </footer>
                    </div>
                </section>
                <div class="slds-backdrop slds-backdrop_open"></div>
            </aura:if>
        </aura:set>
    </aura:if>

</aura:component>