<!-- IW-->
<aura:component implements="force:hasRecordId,flexipage:availableForRecordHome" access="global" >
  <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="iwRequestDetails" type="Object"/>
    <aura:attribute name="accountDetails" type="Object"/>
    <aura:attribute name="accountName" type="String"/>
    <aura:attribute name="accountId" type="String"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <force:recordData aura:id="iwRecord"
                      recordId="{!v.recordId}"
                      targetFields="{!v.iwRequestDetails}"
                      layoutType="FULL"
                      recordUpdated="{!c.updateAccount}"/>
    
    <force:recordData aura:id="accountDetails"
                      targetFields="{!v.accountDetails}"
                      fields="Name,OwnerId,TERR_HIER_1__c,TERR_HIER_2__c,
                              TERR_HIER_3__c, TERR_HIER_4__c, TERR_HIER_5__c "
                      layoutType="FULL"/>
    <!-- 19.4 Sujay : FFPSA-795 renaming RecordId to accRecordId to avoid intermittent Error -->
    <c:IW_AccountDetailsComponent accRecordId="{!v.iwRequestDetails.Account__c}" accountName="{!v.accountDetails.Name}"/>
                          
</aura:component>