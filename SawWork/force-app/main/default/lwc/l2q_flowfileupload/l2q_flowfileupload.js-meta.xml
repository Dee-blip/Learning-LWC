<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>L2Q File Upload</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__FlowScreen</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="recordId" type="String" label="Related Record Id" description="" role="inputOnly" required="true" default="{!recordId}" />
            <property name="allowMultifiles" type="boolean" label="Multiples File " description="" role="inputOnly" />
            <property name="uploadedFilestring" type="String" label="Uploaded String Data(System Use and Required)" description="" />
            <property name="fileFormat" type="String" label="File Format Separated by #  i.e .pfd#.png " description="" role="inputOnly" />
            <property name="deleteAllowed" type="boolean" label="Is file delete Allowd ?" description="" role="inputOnly" />
            <property name="tableStyle" type="String" label="Table Style CSS" description="" role="inputOnly" />
            <property name="isFileuploadrequired" type="boolean" label="Is File Upload Required" description="" role="inputOnly" />
            <property name="deleteconfirmMessage" type="String" label="Delete Confirmation Message" description="" role="inputOnly" />
            <property name="fileheaderText" type="String" label="File Upload Label" description="" role="inputOnly" />
            <property name="fileuploadrequiredMessage" type="String" label="File Uplaod Required Message" description="" role="inputOnly" />
            <property name="disabled" type="boolean" label="Disabled" description="" role="inputOnly" />
            <property name="hooverText" type="String" label="Hoovertext" description="" role="inputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>