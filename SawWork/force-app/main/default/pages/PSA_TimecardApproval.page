                            {
                                message = 'Rejected ' + successCount + ' Record(s)';
                            }
                            if(Object.keys(errors).length > 0)
                            {
                                message += '. Some timecards could not be processed due to errors'
                            }
                            showMessage(message);    
                            
                        }

                    } 
                    else
                    {                        
                        showMessage(event.message);    
                    } 
                    $j('#status').hide();                     
