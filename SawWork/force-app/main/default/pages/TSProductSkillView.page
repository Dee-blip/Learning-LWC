<apex:page standardController="TS_Product_Skill__c" extensions="TSProductSkillExtension" sidebar="false" standardStylesheets="true" showHeader="false">
    <head>
        <apex:includeScript value="{!URLFOR($Resource.JQuery111, 'jquery-1.11.2/dist/jquery.min.js')}"/>
        <apex:includeScript value="{!URLFOR($Resource.JQueryUI111, 'jquery-ui.min.js')}"/>
        
        <apex:includeScript value="{!URLFOR($Resource.bootstrap3, 'dist/js/bootstrap.js')}"/>
        <apex:includeScript value="{!URLFOR($Resource.bootstrap3, 'dist/js/bootstrap.min.js')}"/>
        
        <apex:stylesheet value="{!URLFOR($Resource.bootstrap3, 'dist/css/bootstrap.css')}"/>
        <apex:stylesheet value="{!URLFOR($Resource.bootstrap3, 'dist/css/bootstrap.min.css')}"/>
        
        <apex:stylesheet value="{!URLFOR($Resource.jQueryDataTablesZip, 'jQueryDataTables/css/jquery.dataTables.css')}"/>
    </head>
    <body>
        <div class="container-fluid">            
            <apex:form >
                <apex:panelGrid columns="2" style="margin-left:auto; margin-right:auto"> 
                    <apex:commandButton value="Edit Skill" action="{!edit}" styleClass="btn btn-default"/>     
                    <apex:commandButton value="Back" action="{!skillsList}" styleClass="btn btn-default"/>                       
                </apex:panelGrid><br/>
                <apex:pageBlock >                    
                    <apex:pageBlockSection columns="1" title="ACD Skill Information">
                        <apex:outputField value="{!TS_Product_Skill__c.Product_Skill_Name__c}"/>
                    </apex:pageBlockSection>                    
                </apex:pageBlock>
            </apex:form>
            <apex:relatedList list="TS_ProductMembers__r"/>
            <apex:pageBlock >
                <apex:pageBlockSection columns="2" title="System Information">
                    <apex:pageblockSectionItem >
                        <apex:outputLabel >Created By</apex:outputLabel>
                        <apex:outputText value="{!TS_Product_Skill__c.CreatedBy.Name}"/>    
                    </apex:pageblockSectionItem>
                    <apex:outputField value="{!TS_Product_Skill__c.CreatedDate}"/>    
                </apex:pageBlockSection>
            </apex:pageBlock>
        </div>               
    </body>
</apex:page>