<apex:page controller="ACRNewtoAssignedController" action="{!AssignedTo}" lightningStylesheets="true" >
<apex:form >
        <apex:pageBlock title="Confirm" rendered="{!ErrorFlag}">
            <apex:pageMessage escape="false" summary="{!ErrorMessage}" severity="FATAL" strength="3"/>
           
            <apex:pageBlockButtons location="bottom">
                   
                    <apex:commandButton action="{!Cancel}" value="Cancel"/>
            </apex:pageBlockButtons>    
        </apex:pageBlock>
    </apex:form>
  
</apex:page>