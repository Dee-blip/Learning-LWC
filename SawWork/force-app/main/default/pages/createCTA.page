<apex:page showHeader="true" sidebar="true" controller="MARIT_createBulkCTAController" lightningStylesheets="true" action="{!dmlOperation}">   
    <apex:pageBlock title="CTA creation result for Person Ids: {!personIds}">
       <apex:pageBlockTable value="{!ctaDetails}" var="cta">
           <apex:column headerValue="Person">
           		<apex:outputLink value="/{!cta['personId']}" target="_blank">{!cta['personName']}</apex:outputLink>
           </apex:column>    
           <apex:column headerValue="CTA link">
           		<apex:outputLink value="/{!cta['ctaId']}" target="_blank" rendered="{!cta['ctaurlDisplay'] == '1'}">link</apex:outputLink>
           </apex:column> 
           <apex:column headerValue="Reason for no CTA creation">
                <apex:outputText value="{!cta['ctaError']}" rendered="{!cta['ctaurlDisplay'] == '0'}"/>
           </apex:column>                                  
       </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>