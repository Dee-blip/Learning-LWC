<apex:page controller="ValidCountryCallingCodesController" tabStyle="Account" showHeader="false" >
<Style>
    .fontClass{
font-size:15px;
}
    .font{
    font-size:12px;
}   
</style>
  <apex:sectionHeader title="List of Valid Country Calling Codes" />
  <apex:pageBlock >

  <apex:pageBlockTable value="{!countrycodes}" var="c" id="tblResults">
                        <apex:column >
                         <apex:facet name="header">
                            <apex:outputPanel styleClass="fontClass">Country Name</apex:outputPanel> 
                          </apex:facet>
                          <font> <apex:outputField value="{!c.Name}"/></font>
                        </apex:column>
                        <apex:column >
                          <apex:facet name="header">
                            <apex:outputPanel styleClass="fontClass">Country Code</apex:outputPanel>
                          </apex:facet>
                          <font><apex:outputField value="{!c.Code__c}"/>  </font>
                        </apex:column>
      
         </apex:pageBlockTable>
         </apex:pageBlock>
 </apex:page>