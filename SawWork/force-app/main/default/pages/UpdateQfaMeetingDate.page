<apex:page controller="UpdateQfaMeetingDateController" sidebar="true" showHeader="true" tabStyle="Lead">
    <apex:pageMessages />
    <apex:pageBlock rendered="{!initializedFlag}">
        <apex:pageBlockSection title="Lead Details">
                <apex:outputField value="{!lead.Name}"/>
                <apex:outputField value="{!lead.OwnerId}"/>    
                <apex:outputField value="{!lead.Associated_Contact__c}"/>                    
                <apex:outputField value="{!lead.Status}"/>                                    
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Opportunity Details">
            <apex:outputField value="{!opp.Name}"/>
            <apex:outputField value="{!opp.OwnerId}"/>            
            <apex:outputField value="{!opp.AccountId}"/>                        
            <apex:outputField value="{!opp.StageName}"/>                                    
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Update the QFA Meeting Date">
            <apex:form >
                <center>
                    <br/>
                    <br/>
                    <b><apex:outputLabel value="QFA Meeting Date : "/> </b>
                    <apex:inputField value="{!lead.QFA_Meeting_Date__c}" />
                </center>                      
                <br/><br/>
                <apex:commandButton value="Save" action="{!save}"/>
            </apex:form>        
        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>