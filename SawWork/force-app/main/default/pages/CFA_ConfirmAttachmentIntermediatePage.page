<apex:page controller="CFA_ConfirmAttachmentController">
    <apex:pageMessages escape="false" />
    <apex:form id="Pageform2">
        <apex:pageBlock title="Upload Purchase Order">
            <apex:outputPanel >
                <apex:pageBlockSection title="Upload Purchase Order">

                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="File Name" for="fileName" />
                        <apex:inputText value="{!attachmentt.Title}" id="fileName" />
                    </apex:pageBlockSectionItem>

                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="File to upload" for="uploadFile" />
                        <apex:inputFile value="{!attachmentt.VersionData}" filename="{!attachmentt.Title}" id="uploadFile" />
                    </apex:pageBlockSectionItem>

                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Description" for="description" />
                        <apex:inputTextarea value="{!attachmentt.Description}" id="description" />
                    </apex:pageBlockSectionItem>
                </apex:pageBlockSection>
            </apex:outputPanel>
            <apex:outputPanel >

                <table width="100%">
                    <tr>
                        <td style="width: 20%; margin-right:10px; "></td>
                        <td>
                            <apex:commandButton action="{!back}" value="Back" />
                        </td>
                        <td>
                            <apex:commandButton action="{!upload}" value="Upload" />
                        </td>
                    </tr>
                </table>
            </apex:outputPanel>
        </apex:pageBlock>
    </apex:form>
</apex:page>