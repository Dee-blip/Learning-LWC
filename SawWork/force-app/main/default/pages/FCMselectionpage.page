<apex:page id="FCMselect" name="Select PAE" controller="FCM_page_controller" showHeader="true" sidebar="true" action="{!checkForNoFCM}" standardStylesheets="false">
    <style type='text/css'>
.betaLink {
background-color:#F8F8F8;
border:1px solid #D4DADC;
display:inline-block;
font-weight:bold;
line-height:25px;
margin-bottom:15px;
padding:0 7px;
}
</style>
    <script type="text/javascript">
