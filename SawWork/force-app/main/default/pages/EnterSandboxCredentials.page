<apex:page showHeader="true" standardController="Sandbox_Details__c" extensions="EnterSandboxCredentialsController">
    <apex:form >
        <apex:pageBlock >
            <apex:pageMessages />
            <apex:pageBlockSection title="Update Sandbox Details" columns="1">
                <apex:inputField value="{!Sandbox_Details__c.Sandbox_Name__c}"/>
                <apex:inputField value="{!Sandbox_Details__c.Username__c}"/>
                <apex:inputSecret value="{!Sandbox_Details__c.Password__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="Save" action="{!saveDetails}" />
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>