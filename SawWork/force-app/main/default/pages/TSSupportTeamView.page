<apex:page standardController="TS_Support_Team__c" sidebar="false" standardStylesheets="true" showHeader="false">
    <head>
        <apex:includeScript value="{!URLFOR($Resource.JQuery111, 'jquery-1.11.2/dist/jquery.min.js')}"/>
        <apex:includeScript value="{!URLFOR($Resource.JQueryUI111, 'jquery-ui.min.js')}"/>
        
        <apex:includeScript value="{!URLFOR($Resource.bootstrap3, 'dist/js/bootstrap.js')}"/>
        <apex:includeScript value="{!URLFOR($Resource.bootstrap3, 'dist/js/bootstrap.min.js')}"/>
        
        <apex:stylesheet value="{!URLFOR($Resource.bootstrap3, 'dist/css/bootstrap.css')}"/>
        <apex:stylesheet value="{!URLFOR($Resource.bootstrap3, 'dist/css/bootstrap.min.css')}"/>
        
        <apex:stylesheet value="{!URLFOR($Resource.jQueryDataTablesZip, 'jQueryDataTables/css/jquery.dataTables.css')}"/>
        <style>
           .textsize {font-size: 9pt;}
        </style>
    </head>
    <body class="textsize">
        <div class="container-fluid">     
            <apex:form >
                <apex:panelGrid columns="2" style="margin-left:auto; margin-right:auto"> 
                    <apex:commandButton value="Edit Support Team" action="{!edit}" styleClass="btn btn-default"/>     
                    <apex:commandButton value="Back" action="{!cancel}" styleClass="btn btn-default"/>                       
                </apex:panelGrid><br/>
                <apex:pageBlock >                    
                    <apex:pageBlockSection columns="2" title="Team Information">
                        <apex:outputField value="{!TS_Support_Team__c.Team_Name__c}"/>
                        <apex:outputField value="{!TS_Support_Team__c.Team_Type__c}"/>
                        <apex:outputField value="{!TS_Support_Team__c.VDN__c}"/>
                        <apex:outputField value="{!TS_Support_Team__c.Akam_Row_ID__c}"/>
                    </apex:pageBlockSection>                                      
                </apex:pageBlock>
            </apex:form>
            <apex:relatedList list="TS_TeamMembers__r"/>
            <apex:relatedList list="TS_TeamAccounts__r"/>
            <apex:pageBlock >
                <apex:pageBlockSection columns="2" title="System Information">
                    <apex:pageblockSectionItem >
                        <apex:outputLabel >Created By</apex:outputLabel>
                        <apex:outputText value="{!TS_Support_Team__c.CreatedBy.Name}"/>    
                    </apex:pageblockSectionItem>
                    <apex:outputField value="{!TS_Support_Team__c.CreatedDate}"/>    
                </apex:pageBlockSection>  
            </apex:pageBlock>
        </div> <!-- end of container div -->
    </body>
</apex:page>