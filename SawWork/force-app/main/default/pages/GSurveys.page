<apex:page standardController="Survey__c" extensions="GSurveysController" id="pageId">

<apex:stylesheet value="{!$Page.labs_survey_css}" />
<apex:includeScript value="{!URLFOR($Resource.SurveyForce, 'jquery.js')}"/>
<script src="/soap/ajax/18.0/connection.js" type="text/javascript"></script>
<script src="/soap/ajax/18.0/apex.js" type="text/javascript"></script>
<script>sforce.connection.sessionId = '{!$Api.Session_ID}'; </script>
<script type="text/javascript">

 
  function confirmDelete(deleteId){
    var r = confirm("Are you sure you want to delete this survey?");
    if(r){
      sforce.apex.execute(
        "GSurveysController",
        "deleteSurvey",
        {deleteId : deleteId});
    }
  }

$(document).ready(function() {
  var splitURL = location.href.split(".");
  var loc;
  for(i=0; i<splitURL.length; i++){
    if(splitURL[i] == "visual" || splitURL[i] == "salesforce"){
      loc = i-1;
      break;
    }
  }
  
  if(splitURL[i]=="visual"){
    $("input[id*='POD']").val(splitURL[loc]);
  }
  
  else{
    $("input[id*='POD']").val("NO_POD");
  }
  
  $("input[id*='POD']").css("visibility", "hidden");
  if({!showAddSitesMessage}){
    $("input[id*='surveyNameField']").val("PLEASE CREATE SITE BEFORE ADDING SURVEY");
    $("input[id*='surveyNameField']").css("color", "red");
    $("input[id*='surveyNameField']").size(150);
   }
});
</script>

<apex:pageMessages rendered="{!IsRecordTypeRSSTemplate}" id="errorMessage" showDetail="false"></apex:pageMessages>
<div id="labs_container">

    <apex:outputPanel id="surveyMaker" >
      <apex:pageBlock id="Block" > 
     
      <!--added a if condition for displaying different text for RSS Template record type 
      Vineet
      -->
        <h1>{!if(IsRecordTypeRSSTemplate,'Create A New RSS Template','Make A New Survey')} {!siteInfo}</h1><br/>
       
        <apex:form id="makeSurveyForm">
        
        <table>
        <tr> 
        <!--added a if condition for displaying different text for RSS Template record type  
      Vineet
      -->
         
         <td>{!if(IsRecordTypeRSSTemplate,'Enter RSS Template Name: ','Enter Survey Name: ')} </td>
         
         <td>
         <div class="requiredInput">
         <div class="requiredBlock"></div>
         <apex:inputText label="Enter RSS Template Name " id="surveyNameField" value="{!newSurveyName}" size="40" required="true" disabled="{!showAddSitesMessage}"/>
         </div>
         </td>
         
         </tr><tr>
        
         <!--added a if condition for displaying different text for RSS Template record type  
      Vineet
      -->
         <td><apex:commandButton action="{!makeNewSurvey}" value="{!if(IsRecordTypeRSSTemplate,'Create New Template','Make New Survey')}" id="createSurveyButton" /></td>
        </tr>
        </table>
        </apex:form>
      </apex:pageBlock>
     </apex:outputPanel>
     <!--show Survey List for record types other than RSS Template  
      Vineet
      -->
  <apex:outputPanel id="surveyList" rendered="{!!IsRecordTypeRSSTemplate}">
    <apex:pageBlock >
      <h1>Current Surveys</h1>
      <apex:repeat value="{!allSurveys}" var="sur" id="allSurveysRepeat">
      <div class="survey_preview">
        <h2><apex:outputLink value="/apex/SurveyPage?id={!sur.sId}" >{!sur.sName}</apex:outputLink></h2>
            <div class="footer">
            <apex:form >
         <apex:commandLink value="Delete" action="{!doSurveyReset}" reRender="surveyList" onclick="confirmDelete('{!sur.sId}')">
           <apex:param assignTo="{!surveyDelete}" value="{!sur.sId}" name="d"/>
         </apex:commandLink> 
      </apex:form>
      <apex:outputLink value="/apex/SurveyPage?id={!sur.sId}" >Edit</apex:outputLink>
            </div>
      </div>
      </apex:repeat> 
      <br style="clear: both;" />
    </apex:pageBlock>
  </apex:outputPanel>
</div>
</apex:page>