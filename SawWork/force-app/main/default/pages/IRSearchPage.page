<apex:page controller="page_SearchController" >
<style>
td
{
vertical-align:top;
}
</style>

    <table>
    <tr>        
    <td width="150">
     <c:IR_Search_Component pageController="{!this}" SearchFieldset="{!FilterObject}" Status="FilterLoading"  DefaultSortOrderDirection="Desc" DefaultOrderBy="IR_Invoice_Date__c" inputQuery="{!InputQuery}" Title="Search" reRenderid="rerenderid" Limit="1000" id="component"  />
<apex:actionStatus id="FilterLoading">
    <apex:facet name="start">
    <c:enhancedActionStatus BackColor="#ffffff" borderColor="#ffffff" borderSize="2" height="50px" width="150px" ImageUrl="/changemgmt/img/spinner24.gif" Message="Searching...." messageStyle="color:darkred;font-size:11pt;font-weight:bold;"/>
    </apex:facet>   
    </apex:actionStatus>
    </td>
    
    
    <td width="100%">
        <apex:form id="rerenderid" >
        <apex:pageBlock >
        <table width="100%" cellspacing="5px" >
        <tr>
        
        <td align="left">
          <apex:outputText style="bold">Current Page: {!(objController.pagenumber)} </apex:outputText>
         
        </td>            
            
            <td align="right">            
                  <apex:commandLink status="FilterLoading" action="{!first}" > First </apex:commandlink> &nbsp;&nbsp;&nbsp;&nbsp;
                  <apex:commandLink action="{!previous}" rendered="{!hasPrevious}" > Previous </apex:commandlink> &nbsp;&nbsp;&nbsp;&nbsp;
                  <apex:commandLink action="{!next}" rendered="{!hasNext}" > Next </apex:commandlink> &nbsp;&nbsp;&nbsp;&nbsp;
                  <apex:commandLink action="{!last}" > Last </apex:commandlink> 
            </td>
            
        </tr>
        </table>
        
        
        <apex:pageBlockTable value="{!MyCases}" var="a" style="width:100%">
        

           <apex:column >                
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Case Number" action="{!toggleSortOrder}"  rerender="rerenderid">
                        <apex:param name="sortField" value="CaseNumber" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.CaseNumberHyperLink__c}"/>
               </apex:column>
           
           
           
            <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Account Name" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="Account.Name" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.Account.Name}"/>
            </apex:column>  
            
            
            
              <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Parent Account" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="IR_Parent_Account_Name__c" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.IR_Parent_Account_Name__c}"/>
            </apex:column>
              
              
                <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Original Contract" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="IR_Original_Contract_Id__r.Name" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.IR_Original_Contract_Id__r.Name}"/>
            </apex:column>
                
                
                  <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Reporting Region" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="IR_Reporting_Region__c" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.IR_Reporting_Region__c}"/>
            </apex:column>
                
                            
                    <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Invoice Number" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="IR_Invoice_Number__c" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.IR_Invoice_Number__c}"/>
            </apex:column>
                    
                    
                      <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Invoice date" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="IR_Invoice_Date__c" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.IR_Invoice_Date__c}"/>
            </apex:column>
                      
                      
                      
                       <apex:column >
                <apex:facet name="header">
                    Description
                </apex:facet>
                <apex:outputField value="{!a.Description}"/>
            </apex:column>
                       
                       
                         <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Owner" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="Owner.Name" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.Owner.Name}"/>
            </apex:column>
                         
                              <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Status" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="Status" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.Status}"/>
            </apex:column>
            
        <!-- 24th April Changes-->    
             <apex:column >
                <apex:facet name="header">
                    <apex:commandLink status="FilterLoading" value="Manual Contract" action="{!toggleSortOrder}" rerender="rerenderid">
                        <apex:param name="sortField" value="IR_Manual_Contract__c" assignTo="{!sortField}"/>
                    </apex:commandLink>
                </apex:facet>
                <apex:outputField value="{!a.IR_Manual_Contract__c}"/>
            </apex:column>
                       
             
                              
        </apex:pageBlockTable>
        </apex:pageBlock>
       <!--apex:outputText value="{!myComponentController.OutputQuery}"></apex:outputText--> 
        </apex:form>
    </td>
    </tr>
    </table>
    


</apex:page>