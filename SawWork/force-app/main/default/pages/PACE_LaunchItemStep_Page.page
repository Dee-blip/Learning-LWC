<apex:page standardController="Launch_Item__c" extensions="PACE_LaunchItemStep_Controller" tabStyle="Launch_Item_Approval__c" >
  <apex:form >
  <apex:outputText rendered="{!isListNull}">No links have been added to the 'Package Design' and 'Package "Deployment' steps yet </apex:outputText>
      <apex:pageBlock rendered="{!!isListNull}">
      
      <apex:pageblockSection columns="1">
          <apex:outputText rendered="{!isPkgDesListNull}">No links have been added to the 'Package Design' step yet </apex:outputText>
                     <apex:pageBlockTable value="{!packageDesignDocRecordList}" var="h" rendered="{!!isPkgDesListNull}">
                        <apex:column style="width:20%" headerValue="Package Design Link Name"  value="{!h.Name}"/>
                        <apex:column style="width:80%" headerValue="Link"  value="{!h.Document_URL__c}"/>
                     </apex:pageBlockTable>
      </apex:pageblockSection>
      <apex:pageblockSection columns="1">
                  <apex:outputText rendered="{!isPkgDepListNull}">No links have been added to the 'Package Deployment' step yet </apex:outputText>
                     <apex:pageBlockTable value="{!packageDeploymentDocRecordList}" var="hc" rendered="{!!isPkgDepListNull}">
                        <apex:column style="width:20%" headerValue="Package Deployment Link Name"  value="{!hc.Name}"/>
                        <apex:column style="width:80%" headerValue="Link"  value="{!hc.Document_URL__c}"/>
                     </apex:pageBlockTable>
      </apex:pageblockSection>
      </apex:pageBlock> 
  </apex:form> 
</apex:page>