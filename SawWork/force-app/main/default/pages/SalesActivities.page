<apex:page controller="SalesActivitiesController" tabStyle="Account" name="View Activity History">
        <apex:pageMessages />
       <apex:pageBlock title="View Activity History" rendered="{!initializedFlag}">
           <apex:outputText >
                <H1>
                    Account Name : {!acc.Name} <br /> <br />
                    Total Number of records : {!count}
                </H1>
           </apex:outputText>
           <br/><br/>
           <apex:form rendered="{!count > 0}">
               <H1><apex:outputText value="View record with Subject : " /></H1>
               <apex:selectList multiselect="false" size="1" value="{!selectedJumpOption}">
                   <apex:selectOptions value="{!jumpOptions}"/>
               </apex:selectList>
               <apex:commandButton value="Go" action="{!go}"/>
               <br/><br/>
               <apex:pageBlock rendered="{!selectedJumpOption!=null}" tabStyle="Task">
                   <apex:pageBlockSection >
                       <apex:outputField value="{!selectedTask.Subject}"/> <br/>                      
                       <apex:outputField value="{!selectedTask.WhoId}"/> <br/>                   
                       <apex:outputField value="{!selectedTask.WhatId}"/> <br/>                                      
                       <apex:outputField value="{!selectedTask.ActivityDate}"/> <br/>               
                       <apex:outputField value="{!selectedTask.OwnerId}"/> <br/>               
                       <apex:outputField value="{!selectedTask.AKAM_Modified_Date__c}"/> <br/>    
                       <apex:outputField value="{!selectedTask.Description}"/> <br/>
                       <apex:outputField value="{!selectedTask.AKAM_Activity_ID__c}"/> <br/>                                                                                      
                   </apex:pageBlockSection>
                   <br/><br/>                
               </apex:pageBlock>  
               <br/><br/>
           </apex:form>
           <apex:form >
                <apex:commandButton value="Return to Account" title="Return to Account" action="{!Redirect}" />
           </apex:form>
       </apex:pageBlock>
       <apex:repeat value="{!allTasks}" var="item">
              <apex:pageBlock rendered="true" tabStyle="Task">
                  <apex:pageBlockSection >
                       <apex:outputField value="{!item.Subject}"/> <br/>                      
                       <apex:outputField value="{!item.WhoId}"/> <br/>                   
                       <apex:outputField value="{!item.WhatId}"/> <br/>                                      
                       <apex:outputField value="{!item.ActivityDate}"/> <br/>               
                       <apex:outputField value="{!item.OwnerId}"/> <br/>               
                       <apex:outputField value="{!item.AKAM_Modified_Date__c}"/> <br/>    
                       <apex:outputField value="{!item.Description}"/> <br/>
                       <apex:outputField value="{!item.AKAM_Activity_ID__c}"/> <br/>                                                                                      
                       <br/><br/>        
                   </apex:pageBlockSection>                                        
              </apex:pageBlock>                       
       </apex:repeat>
</apex:page>