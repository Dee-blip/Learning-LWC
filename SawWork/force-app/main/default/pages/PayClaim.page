<apex:page standardController="SFDC_MDF_Claim__c" extensions="FundClaimAllocationController" >
    <apex:outputText rendered="false" value="{!SFDC_MDF_Claim__c.Id} {!SFDC_MDF_Claim__c.Amount__c} {!SFDC_MDF_Claim__c.CreatedDate} {!SFDC_MDF_Claim__c.Fund_Request__c} {!SFDC_MDF_Claim__c.Fund_Request__r.Account__c}"/>
    <apex:pageMessages rendered="{!NOT(payClaim)}" id="messages"/>
    <br/>
    <apex:outputLink rendered="{!NOT(payClaim)}" value="/{!SFDC_MDF_Claim__c.Id}" id="back"><b>Back to Claim</b></apex:outputLink>
    <apex:form id="payform" rendered="{!payClaim}">
    
        <apex:pageMessages id="messages"/>
        <apex:pageBlock id="payClaimBlock" title="Fund Claim" tabStyle="SFDC_MDF_Claim__c">
        
            <apex:pageBlockSection columns="1"> 
                <apex:inputHidden value="{!SFDC_MDF_Claim__c.Status__c}" id="field1"/>
                <apex:inputHidden value="{!SFDC_MDF_Claim__c.Status__c}" id="field2"/>
                <apex:inputHidden value="{!SFDC_MDF_Claim__c.Fund_Request__r.Account__r.Name}" />
                             
                <apex:outputField value="{!SFDC_MDF_Claim__c.Account__c}"/>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Claim Number" for="claim"/>
                    <apex:outputLink value="/{!SFDC_MDF_Claim__c.Id}" id="request">{!SFDC_MDF_Claim__c.Name}</apex:outputLink>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Claim Date" for="claimdate"/>
                    <apex:outputText value="{!claimDateString}" id="claimdate"/>
                </apex:pageBlockSectionItem>
                
                <apex:inputField value="{!SFDC_MDF_Claim__c.Claim_Paid_Date__c}"/>
                <apex:inputHidden value="{!SFDC_MDF_Claim__c.Paid_Check_Number__c}" />
                <apex:inputField value="{!SFDC_MDF_Claim__c.Invoice_Date_del__c}" />
                <apex:inputHidden value="{!SFDC_MDF_Claim__c.Settlement_Method__c}" />
                <apex:inputField value="{!SFDC_MDF_Claim__c.Contract_Id__c}" required="true" /> 
                <!-- Sonali Tandon CR 2804079 MDF -Fund Claim validation -Either PO Number or Transfer Account required-->
                <apex:inputField value="{!SFDC_MDF_Claim__c.PO_Number__c}" rendered="{!showPONumberAndTransferAccount}"/>
                <apex:inputField value="{!SFDC_MDF_Claim__c.Transfer_Account__c}" rendered="{!showPONumberAndTransferAccount}" />
                <!-- Sonali Tandon CR 2804079-->    
                <!-- SFDC-5962 Replacing Paid By (Paid_By__c) with Fund_Claim_Activity_Spender__c-->
                <apex:inputHidden value="{!SFDC_MDF_Claim__c.Fund_Claim_Activity_Spender__c}" />
            </apex:pageBlockSection>
            
            <apex:outputPanel >
                <apex:commandButton id="btnSave" value="Save" action="{!saveClaimPaymentInfo}"  />
                <apex:commandButton id="btnCancel" value="Cancel" action="{!cancelAllocations}" />
            </apex:outputPanel>
        </apex:pageBlock>       
            
    </apex:form>
</apex:page>