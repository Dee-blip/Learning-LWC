<apex:page showHeader="false" sidebar="false" controller="PreChatController">
    <apex:includeScript value="{!$Resource.JQuery_New}"/>
    <apex:stylesheet value="{!URLFOR($Resource.EBMailerStatusUI, '/bootstrap-3.3.2-dist/css/bootstrap.min.css')}"/>
    <script>
        $(window).load(function() {
        $(".loader").fadeOut("slow");
    });
    </script>
    <div class="loader" style="text-align:center;margin-bottom: 29px;margin-top: 12px;">
        Loading...
    </div>
    <!--<img id="liveagent_button_online_5730f000000PX00" style="display: none; border: 0px none; cursor: pointer" onclick="liveagent.startChat('5730f000000PX00')" src="https://sfcom-myakamai.cs60.force.com/customers/resource/1525863554000/liveagent_chat_online_en" />
  <img id="liveagent_button_offline_5730f000000PX00" style="display: none; border: 0px none; " src="https://sfcom-myakamai.cs60.force.com/customers/resource/1525863554000/liveagent_chat_offline_en" />-->
    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css"/>-->
    <div id="liveagent_button_offline_id" class="">
        <div>
            <button class="btn btn-primary" disabled="disabled" style="background-color: #f46b29;border-color: #ab4d09;background-image: linear-gradient(#f8971d,#f46b29);    width: 163px;
                                                                       text-decoration: none;height: 32px;
                                                                       padding: 0 10px;
                                                                       margin: 0;
                                                                       line-height: 1;
                                                                       border-style: solid;
                                                                       border-width: 1px;
                                                                       margin-left: 38%;color:wheat;
                                                                       font-weight: 500;opacity: 0.44;">{!chatBtnLabel}</button>
        </div>
        <div class="no-agents-message-container" style="margin-top:7px;">
            <!-- ngIf: vm.chatLineFlags[vm.currChatLineId].disabled --><span class="no-agents-message ng-scope" translate="" ng-if="vm.chatLineFlags[vm.currChatLineId].disabled" style="">There are no agents available at the moment. Please create a <a href="{!ticketUrl}" target="_blank">ticket</a> instead and someone from the support team will get in touch with you.</span><!-- end ngIf: vm.chatLineFlags[vm.currChatLineId].disabled -->
        </div>
    </div>
    
    <div id="liveagent_button_online_id" class="">
        <div>
            <button class="btn btn-primary" style="background-color: #f46b29;border-color: #ab4d09;background-image: linear-gradient(#f8971d,#f46b29);    width: 163px;
                                                   text-decoration: none;
                                                   height: 32px;
                                                   padding: 0 10px;
                                                   margin: 0;
                                                   line-height: 1;
                                                   border-style: solid;
                                                   border-width: 1px;
                                                   margin-left: 38%;color:white;
                                                   font-weight: 500;" onclick="liveagent.startChat('{!amgBtnId}')">{!chatBtnLabel}</button>
            
        </div>
    </div>
    <script type="text/javascript">
    if (!window._laq) { window._laq = []; }
    window._laq.push(function(){liveagent.showWhenOnline('{!amgBtnId}', document.getElementById('liveagent_button_online_id'));
                                liveagent.showWhenOffline('{!amgBtnId}', document.getElementById('liveagent_button_offline_id'));
                               });</script>
    
    <script type='text/javascript' src='{!akachatDeploymentJS}'></script>
    <script type='text/javascript'>
        liveagent.addCustomDetail('ChatOriginFrom', 'Community', false);
        liveagent.init('{!akachatInitURL}', '{!lunaDeploymentId}', '{!orgId}');
    </script>
</apex:page>