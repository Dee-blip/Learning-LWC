<apex:page standardStylesheets="false" sidebar="false" showHeader="false" controller="NAPLandingPageController">
    <html xmlns:ng="http://angularjs.org" ng-app="NAPLandingPage" lang="en">

    <head>
        <!-- SFDC-7653 - @nadesai -->
        <title>Welcome to {! $Label.NapRebrand_Label1 }</title>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />




        <apex:includeScript value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/js/jquery.min.js')}" />
        <apex:includeScript value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/js/bootstrap.min.js')}" />
        <apex:stylesheet value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/css/bootstrap.min.css')}" />
        <apex:includeScript value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/js/angular.min.js')}" />
        <apex:includeScript value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/js/angular-sanitize.min.js')}" />
        <apex:includeScript value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/js/ui-bootstrap-tpls.min.js')}" />
        <apex:stylesheet value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/css/font-awesome.min.css')}" />
        <apex:stylesheet value="{!URLFOR($Resource.NAPRebrandedPage, 'NAPRebrandedPage/css/naplandingstyle.css')}" />


        <script src="/soap/ajax/32.0/connection.js" type="text/javascript"></script>
        <script src="/soap/ajax/32.0/apex.js" type="text/javascript"></script>
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-94107812-3', 'auto');
            ga('send', 'pageview');

        </script>

        <!--Angular Js-->
        <script type="text/javascript">
            var app = angular.module('NAPLandingPage', ['ui.bootstrap', 'ngSanitize']);
            app.controller('NAPLandingPageCtrl', function ($scope, $window, $sce) {
                $scope.myInterval = 5000;
                $scope.menuitems = {!MenuItems
            };
            $scope.permanentmenuitems = {!PermanentMenuItems};
            $scope.carouselitems = {!CarouselItems};
            $scope.billboardText = $sce.trustAsHtml({!billboardText});
            $scope.redirect = function (pagelink, target) {
                $window.open(pagelink, target);
            }
          });
        </script>
        <!--Angular Js-->
        <style>
            .alert-div-customized {
                margin-top: 3px;
                margin-bottom: 3px;
                background-color: #e74c3c;
                color: #ffffff;
                font-family: 'Ubuntu';

            }

            .billboard-div {
                color: #D8000C;
                background-color: #FFBABA;
                margin-top: 3px;
                margin-bottom: 3px;
            }

            #loading {
                width: 100%;
                height: 100%;
                top: 0px;
                left: 0px;
                position: fixed;
                display: block;
                opacity: 0.7;
                background-color: #fff;
                z-index: 99;
                text-align: center;
            }

            #loading-image {
                position: absolute;
                top: 50%;
                left: 50%;
                z-index: 100;
            }
        </style>

    </head>


    <body>
        <div id="loading">
            <img id="loading-image" src="/changemgmt/img/spinner24.gif" alt="Loading..." />
        </div>

        <!--responsive-->
        <div ng-controller="NAPLandingPageCtrl">
            <div class="container-non-responsive">

                <!--Top menu-->
                <div class="top-menu-bar">
                    <div class="col-xs-1">
                        <img src="{!URLFOR($Resource.NAPRebrandedPage,'NAPRebrandedPage/images/Akamai-Logo-RGB.png')}" class="akamai-top-menu-logo img-responsive"
                        />
                    </div>

                    <div class="col-xs-2 partner-portal-top">
                        Partner Portal&nbsp;
                    </div>

                    <div class="dropdown top-hello">
                        <button type="button" class="dropdown-toggle" id="logout-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Hello, {!userName}&nbsp;
                            <span class="glyphicon glyphicon-menu-down" id="banner-trigger" aria-hidden="true"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/partners/secur/logout.jsp">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!--Top menu-->
                <div class="alert alert-danger fade in alert-div-customized" ng-show="{!errorExists}">
                    <a href="#" class="close" data-dismiss="alert">Ã—</a>
                    {!errorMessage}
                </div>
                <div class="billboard-div alert alert-danger fade in alert-div-customized" ng-show="billboardText" ng-bind-html="billboardText">
                </div>

                <!--Carousel-->
                <div>
                    <div uib-carousel="x" interval="4000" active="0">
                        <div uib-slide="y" ng-repeat="carousel in carouselitems track by carousel.order" index="carousel.order">
                            <img src="{{carousel.image}}" alt="Akamai Next Gen" style="width: 100%; height: 100%; object-fit: contain;" />
                            <div class="carousel-caption">
                                <div class="slider-description-row2">
                                    <p ng-bind-html="carousel.menuTitle">
                                    </p>
                                </div>

                                <div class="slider-description-row3">
                                    <p ng-bind-html="carousel.menuDescription">
                                    </p>
                                </div>
                                <div ng-if="carousel.link">
                                    <button type="button" ng-click="redirect(carousel.link,'_blank')" class="btn btn-default">Go There Now ></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Carousel-->

                <!--Page Menu-->
                <div class="menu-contents-row" ng-disabled="true">
                    <div class="col-xs-3 banner-image-div-{{item.active}}" ng-repeat="item in menuitems" ng-click="redirect(item.link,'_self')">
                        <i class="{{item.image}} banner-image"></i>
                        <div class="banner-image-heading">
                            {{item.menuTitle}}
                        </div>
                        <div class="banner-image-description">
                            {{item.menuDescription}}
                        </div>
                    </div>
                </div>
                <!--Page Menu-->



                <!--Permanent Menu-->
                <div class="footer-class">

                    <span class="footer-quick-links">
                        <a class="footer-text" href="{{item.link}}" target="_blank" ng-repeat="item in permanentmenuitems">{{item.menuTitle}}</a>
                    </span>
                </div>

                <!--Permanent Menu-->

            </div>
            <!--end of container-non responsive div-->
        </div>
        <!--end of ng-controller div-->
        <script language="javascript" type="text/javascript">
            $(window).load(function () {
                $('#loading').hide();
            });
        </script>
    </body>

    </html>
</apex:page>