<apex:page standardController="SFDC_MDF__c" extensions="FundRequestUtilityController" >
    <apex:outputText rendered="false" value=" {!SFDC_MDF__c.Approved_Date__c} {!SFDC_MDF__c.Approved__c} {!SFDC_MDF__c.Cancelled__c} "/>
    <apex:sectionHeader title="Fund Request" subtitle="{!SFDC_MDF__c.Name}"/>
    <apex:outputField value="{!SFDC_MDF__c.Status__c}" rendered="false"/>
    <apex:pageMessages id="messages"/>
    <apex:form id="theForm">
        <!-- <apex:outputLink value="/{!SFDC_MDF__c.Id}">Back to Request: {!SFDC_MDF__c.Name}</apex:outputLink>-->
        
          <apex:pageBlock id="CancelFRForm">
               <apex:pageblockButtons location="top" >
                    <apex:commandButton action="{!cancelRequest}" value="Continue" id="cancelButton" rendered="{! !SFDC_MDF__c.Cancelled__c}"  />
                    <apex:commandButton action="{!back}" value="Back" id="backButton"  />
                </apex:pageblockButtons>
                <apex:pageBlockSection columns="1" rendered="{! !SFDC_MDF__c.Cancelled__c}">
                    <apex:pageMessage summary="Are you sure you want to cancel the fund request?" severity="info" strength="3" />  
                </apex:pageBlockSection> 
                <apex:pageBlockSection columns="1" rendered="{! SFDC_MDF__c.Cancelled__c}">
                    <apex:pageMessage summary="The fund request has been already cancelled" severity="info" strength="3" />  
                </apex:pageBlockSection>  
           </apex:pageBlock>        
    </apex:form>
</apex:page>