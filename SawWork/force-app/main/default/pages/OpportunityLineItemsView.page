<apex:page standardController="OpportunityLineItem" extensions="OpportunityLineItemsViewController" title="Opportunity Product TEST" tabStyle="Opportunity">
    <script type="text/javascript">
        function deleteOLI() 
        {
            return confirm('Are you sure ?');
        }
    </script>
    <apex:sectionHeader title="{!OpportunityLineItem.Product_Name__c}"/>
    <apex:pageMessages />
    <apex:form >
        <apex:commandLink action="{!cancel}" value="<< Return to Opportunity"/>
        <apex:pageBlock mode="maindetail" title="Opportunity Product Edit">
            <apex:pageBlockButtons >
               <apex:commandButton value="Edit" action="{!edit}"/>            
               <apex:commandButton value="Delete" onclick="return deleteOLI();" action="{!remove}"/>

            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Product Information" collapsible="false">
               <apex:repeat value="{!$ObjectType.OpportunityLineItem.FieldSets.Forecasting_Product_Information_View}" 
                        var="field">
                  <apex:OutputField value="{!OpportunityLineItem[field]}" />
               </apex:repeat>
               <apex:PageblocksectionItem rendered="{!OpportunityLineItem.PricebookEntry.Product2.UOM__c=='Applications'}">
                   <apex:OutputLabel value="# of Apps "></apex:OutputLabel>
                   <apex:OutputField value="{!OpportunityLineItem.Quantity__c}"></apex:OutputField>
               </apex:PageblocksectionItem> 
            </apex:pageBlockSection>
            <!--apex:pageBlockSection title="Other Information" collapsible="false">
               <apex:repeat value="{!$ObjectType.OpportunityLineItem.FieldSets.Forecasting_Other_Information}" 
                        var="field">
                  <apex:OutputField value="{!OpportunityLineItem[field]}" />
               </apex:repeat>
            </apex:pageBlockSection-->
            <apex:pageBlockSection title="System Information" collapsible="false">
               <apex:repeat value="{!$ObjectType.OpportunityLineItem.FieldSets.Forecasting_System_Information}" 
                        var="field">
                  <apex:OutputField value="{!OpportunityLineItem[field]}" />
               </apex:repeat>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Description Information" collapsible="false" columns="1">
               <apex:repeat value="{!$ObjectType.OpportunityLineItem.FieldSets.Forecasting_Description_Information}" 
                        var="field">
                  <apex:OutputField value="{!OpportunityLineItem[field]}" style="width:600px"/>
               </apex:repeat>
            </apex:pageBlockSection>
         </apex:pageBlock>
     </apex:form>
</apex:page>