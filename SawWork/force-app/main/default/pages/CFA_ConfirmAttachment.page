<apex:page controller="CFA_ConfirmAttachmentController">
  <apex:includeScript value="/lightning/lightning.out.js" />

  <div id="lightning" />
  <script>
    if ("{!themeDisplayed}" == "Lightning") {
      window.parent.location = "/partners/s/confirm-attachment?id={!$CurrentPage.parameters.id}";
    }
    else {
      $Lightning.use("c:L2Q_ConfirmAttachmentApp", function () {
        $Lightning.createComponent("c:L2Q_ConfirmAttachmentComp", {
          "contentVersionId": "{!$CurrentPage.parameters.id}",
          "themeDisplayed": "classic"
        }, "lightning", function (cmp) {
        });
      });
      var fileUploadVar = document.getElementById("fileUploadDiv");
      fileUploadVar.style.display = "block";
    }
  </script>
</apex:page>