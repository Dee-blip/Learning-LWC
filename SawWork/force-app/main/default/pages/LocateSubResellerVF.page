<apex:page standardController="Opportunity"  >
      <apex:includeLightning />
      <div id="lightning" />
      <apex:slds />
      <apex:includeScript value="/lightning/lightning.out.js"/>
<script>
var attributes = {
	recordId: "{!Opportunity.Id}"
};

var lightningEventHandler = function(event)
            {
				var action = event.getParam("msg");
                var recordId = event.getParam("recordId");
                switch (action) {
					case "force:navigateToURL":
						window.location.href = '/'+recordId;
						break;
				
					default:
						break;
				}
            };

$Lightning.use("c:LocateSubResellerLtngApp", function () {
	$Lightning.createComponent("c:LocateSubResellerLtng", attributes, "lightning", function (cmp) {
		$A.eventService.addHandler({ "event": "c:LocateSubResellerVFevent", "handler" : lightningEventHandler});
	});
});
</script>
</apex:page>