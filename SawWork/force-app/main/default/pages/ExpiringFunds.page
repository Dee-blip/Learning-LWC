<apex:page controller="FundRequestCustomController" showHeader="false" sidebar="false" standardStylesheets="true" >
    <apex:pageBlock >
          <apex:pageBlockSection title="Expiring Funds" columns="1"> 
              <apex:pageBlockTable value="{!fundBudgetList}" var="fundBudget" id="item">
                  <apex:column value="{!fundBudget.Name}" />
                  <apex:column value="{!fundBudget.Account__r.Name}"  rendered="{!standardUser}" />
                  <apex:column value="{!fundBudget.Amount__c}" />
                  <apex:column value="{!fundBudget.Available_Budget__c}" />
                  <apex:column value="{!fundBudget.Fund_Request_Deadline__c}" />
                  <apex:column value="{!fundBudget.Fund_Claim_Deadline__c}" />
              </apex:pageBlockTable>  
          </apex:pageBlockSection>
   </apex:pageBlock>
</apex:page>