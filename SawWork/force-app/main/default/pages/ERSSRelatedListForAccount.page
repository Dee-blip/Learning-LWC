<apex:page standardController="Account" extensions="ERSSRelatedListForAccountCtrl">
    <apex:outputPanel layout="block" style="overflow:auto;height:260px" id="mainPanel">
        <!-- <apex:pageBlock title="Published ERSS Forms"> -->
        <apex:pageBlock >
            <apex:pageBlockButtons location="bottom" rendered="{!lRSSFormsToDisplay.size > 0}">
                <apex:outputPanel id="pageButtons">
                    <apex:form >
                        <apex:commandButton status="FilterLoading" action="{! first}" title="First Page" value=" << " disabled="{! !(hasPrevious)}" reRender="panelForERSSForms,mainPanel"/>
                        <apex:commandButton status="FilterLoading" action="{! previous}" title="Previous Page" value=" < " disabled="{! !(hasPrevious)}" reRender="panelForERSSForms,mainPanel"/>
                        <apex:outputText value=" Page {! currentPageNumber} Of {! totalNumberOfPages} "></apex:outputText> 
                        <apex:commandButton status="FilterLoading" action="{! next}" title="Next Page" value=" > " disabled="{! !(hasNext)}" reRender = "panelForERSSForms,mainPanel"/> 
                        <apex:commandButton status="FilterLoading" action="{! last}" title="Last Page" value=" >> " disabled="{! !(hasNext)}" reRender = "panelForERSSForms,mainPanel"/>
                    </apex:form>
                </apex:outputPanel>
            </apex:pageBlockButtons>
            
            <apex:outputLabel value="No ERSS Forms to display" rendered="{!lRSSFormsToDisplay.size=0}" styleClass="noRowsHeader"></apex:outputLabel>
            
            <apex:outputPanel id="panelForERSSForms">
                <apex:pageBlockTable value="{! lRSSFormsToDisplay}" var="eRSSFromsToDisplay" rendered="{!lRSSFormsToDisplay.size>0}">
                    <apex:column headerValue="ERSS Form Id">
                        <apex:outputLink value="/apex/RSSForm?id={! eRSSFromsToDisplay.Id}" target="_blank">{!eRSSFromsToDisplay.Name}</apex:outputLink>
                    </apex:column>
                    <apex:column value="{!eRSSFromsToDisplay.Opportunity__c}"/>
                    <apex:column value="{!eRSSFromsToDisplay.Products__c}"/>
                    <apex:column value="{!eRSSFromsToDisplay.OwnerId}"/>
                    <apex:column value="{!eRSSFromsToDisplay.Submittal_Date__c}"/>
                    <apex:column value="{!eRSSFromsToDisplay.Published_Date__c}"/>
                   
                </apex:pageBlockTable>
            </apex:outputPanel>
        </apex:pageBlock>
    </apex:outputPanel>
     <apex:actionStatus id="FilterLoading">
    <apex:facet name="start">
    <c:enhancedActionStatus BackColor="#ffffff" borderColor="#ffffff" borderSize="2" height="50px" width="150px" ImageUrl="/changemgmt/img/spinner24.gif" Message="Filter is Being Applied" messageStyle="color:darkred;font-size:11pt;font-weight:bold;"/>
    </apex:facet>   
    </apex:actionStatus>
</apex:page>