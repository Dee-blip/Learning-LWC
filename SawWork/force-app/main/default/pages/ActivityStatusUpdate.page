<apex:page controller="ActivityMassUpdateController" showHeader="true" title="Activity Update" label="Activity Update" standardStylesheets="true" tabStyle="Task">
<apex:form >
    <apex:pageBlock title="Change Activity Status">
        <apex:PageblockSection id="StatusBlk" columns="1" collapsible="1">
            <apex:facet name="header">
              <span style="color:black;">Select New Status</span>
            </apex:facet>
            <apex:pageblocksectionItem >
               <apex:outputLabel value="New Status: "/>
               <apex:inputField value="{!taskObj.Status}" styleclass="inputBorder"></apex:inputField>

            </apex:pageblocksectionItem>        
        </apex:PageblockSection> 
        <br></br>
       <apex:outputLabel style="padding-left:300px"><apex:commandButton value="Save"  action="{!updateStatus}"/></apex:outputLabel>
       <apex:outputLabel style="padding-left:10px"><apex:commandButton value="Cancel" immediate="true" action="{!returnPage}"/></apex:outputLabel>
    </apex:pageBlock>
</apex:form>
</apex:page>