<apex:page controller="EB_CtrlPreviewEmailAsText" standardStylesheets="false" showHeader="false">
    <apex:form >
	<!-- start of changes for adding an error if template is deleted CR 856235 -->
    <apex:pageMessages id="errorMessage">
    </apex:pageMessages>
	<!-- end of changes for adding an error if template is deleted CR 856235 -->
        <!--<apex:outputText value="{!bodyWithLineBreaks}" id="body"/>-->
        <apex:repeat value="{!bodyWithLineBreaks}" var="string" id="theRepeat">
            <apex:outputText value="{!string}" id="theValue"/><br/>
        </apex:repeat>
        <apex:outputText value="{!subject}" id="subject"/>
    </apex:form>
</apex:page>